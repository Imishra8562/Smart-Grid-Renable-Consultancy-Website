@model Web.Areas.Admin.Model.MasterModel
@{
    ViewBag.Title = "KnowledgeCard";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

    var Type = TempData["AlertType"] ?? string.Empty;
    var Title = TempData["AlertTitle"] ?? string.Empty;
    var Message = TempData["AlertMessage"] ?? string.Empty;
    int i = 0;
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-sm-6"><h3>Knowledge Card</h3></div>
                <div class="col-sm-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#"><i data-feather="home"></i></a></li>
                        <li class="breadcrumb-item">Knowledge</li>
                        <li class="breadcrumb-item active">Knowledge Card</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Knowledge_Card_Obj == null)
    {
        <!-- ================= ADD FORM ================= -->
        <div class="card">
            <div class="card-header pb-0"><h4>Add Knowledge Card</h4></div>
            <div class="card-body">

                @using (Html.BeginForm("SaveKnowledgeCard", "Admin", FormMethod.Post,
                    new { @class = "needs-validation", enctype = "multipart/form-data", novalidate = "novalidate" }))
                {
                    <div class="row g-3">
                        <div class="col-md-12">
                            <label class="form-label">Knowledge Base</label>
                            @Html.DropDownListFor(m => m.Knowledge_Card_Obj.FK_Knowledge_Base_Id,
                                new SelectList(Model.List_Knowledge_Base_Obj, "Knowledge_Base_Id", "Knowledge_Base_Page_Title"),
                                "-- Select Knowledge Base --",
                                new { @class = "form-control", required = "required" })
                        </div>
                    </div>

                    <div class="row g-3 mt-2">
                        <div class="col-md-6">
                            <label class="form-label">Image</label>
                            @Html.TextBoxFor(m => m.Knowledge_Card_Image,
                                new
                                {
                                    @class = "dropify",
                                    type = "file",
                                    data_default_file = Url.Content("~/Areas/Admin/Content/Dropify/file-upload.png")
                                })
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Image Alt Tag</label>
                            @Html.TextBoxFor(m => m.Knowledge_Card_Obj.Knowledge_Card_Image_Alt_Tag,
                                new { @class = "form-control", required = "required" })
                        </div>
                    </div>

                    <div class="row g-3 mt-2">
                        <div class="col-md-6">
                            <label class="form-label">Card Name</label>
                            @Html.TextBoxFor(m => m.Knowledge_Card_Obj.Knowledge_Card_Name,
                                new { @class = "form-control", required = "required" })
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Description</label>
                            @Html.TextAreaFor(m => m.Knowledge_Card_Obj.Knowledge_Card_Description,
                                new { @class = "form-control", id = "Knowledge_Card_Description", rows = "4", required = "required" })
                        </div>
                    </div>

                    <button class="btn btn-primary mt-3">Save</button>
                }
            </div>
        </div>

        <!-- ================= LIST ================= -->
        <div class="container-fluid mt-3">
            <div class="card">

                <div class="card-header d-flex justify-content-between align-items-center flex-wrap gap-2">
                    <h4 class="mb-0 text-nowrap">Knowledge Card</h4>

                    <div class="d-flex align-items-center gap-2 flex-nowrap">

                        <!-- Visible Buttons -->
                        <a href="@Url.Action("KnowledgeBase", "Admin")"
                           class="btn btn-primary btn-sm text-nowrap">
                            <i class="fa fa-plus me-1"></i> Add Base
                        </a>

                        <a href="@Url.Action("KnowledgeCard", "Admin")"
                           class="btn btn-info btn-sm text-nowrap">
                            <i class="fa fa-plus me-1"></i> Add Card
                        </a>

                        <a href="@Url.Action("KnowledgeFailureMode", "Admin")"
                           class="btn btn-info btn-sm text-nowrap">
                            <i class="fa fa-plus me-1"></i> Failure Mode
                        </a>

                        <!-- Dropdown -->
                        <div class="dropdown">
                            <button class="btn btn-secondary btn-sm dropdown-toggle"
                                    type="button"
                                    data-bs-toggle="dropdown"
                                    aria-expanded="false">
                                More
                            </button>

                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <a class="dropdown-item"
                                       href="@Url.Action("KnowledgeRelatedSolution", "Admin")">
                                        <i class="fa fa-link me-2"></i> Related Solution
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item"
                                       href="@Url.Action("KnowledgeWorkflowStep", "Admin")">
                                        <i class="fa fa-random me-2"></i> Workflow Step
                                    </a>
                                </li>
                            </ul>
                        </div>

                    </div>
                </div>

                <div class="card-body">
                    <div class="table-responsive">
                        <table class="display datatable" id="basic-1">
                            <thead>
                                <tr>
                                    <th>S.No</th>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th>Image</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.List_Knowledge_Card_Business_Obj)
                                {
                                    <tr>
                                        <td>@(++i)</td>
                                        <td>@item.Knowledge_Card_Name</td>
                                        <td>@item.Knowledge_Card_Description</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.Knowledge_Card_Image))
                                            {
                                                <img src="@Url.Content(item.Knowledge_Card_Image)" style="width:120px;height:80px;" />
                                            }
                                            else
                                            {
                                                <span class="text-danger">No Image</span>
                                            }
                                        </td>
                                        <td>
                                            <a class="btn btn-warning btn-sm"
                                               href="@Url.Action("KnowledgeCard", "Admin", new { Knowledge_Card_Id = item.Knowledge_Card_Id })">
                                                Edit
                                            </a>
                                            <a class="btn btn-danger btn-sm" href="javascript:void(0);" onclick="confirmDelete('@Url.Action("DeleteKnowledgeCard","Admin",new { Knowledge_Card_Id = item.Knowledge_Card_Id })')"> Delete </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- ================= EDIT FORM ================= -->
        <div class="card">
            <div class="card-header pb-0"><h4>Edit Knowledge Card</h4></div>
            <div class="card-body">

                @using (Html.BeginForm("UpdateKnowledgeCard", "Admin", FormMethod.Post,
                    new { @class = "needs-validation", enctype = "multipart/form-data", novalidate = "novalidate" }))
                {
                    <div class="row g-3">
                        <div class="col-md-8">
                            <label class="form-label">Knowledge Base</label>
                            @Html.DropDownListFor(m => m.Knowledge_Card_Obj.FK_Knowledge_Base_Id,
                                new SelectList(Model.List_Knowledge_Base_Obj, "Knowledge_Base_Id", "Knowledge_Base_Page_Title"),
                                "-- Select Knowledge Base --",
                                new { @class = "form-control", required = "required" })
                        </div>
                    </div>

                    <div class="row g-3 mt-2">
                        <div class="col-md-6">
                            <label class="form-label">Image</label>
                            @Html.TextBoxFor(m => m.Knowledge_Card_Image,
                                new
                                {
                                    @class = "dropify",
                                    type = "file",
                                    data_default_file = Url.Content(Model.Knowledge_Card_Obj.Knowledge_Card_Image)
                                })
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Image Alt Tag</label>
                            @Html.TextBoxFor(m => m.Knowledge_Card_Obj.Knowledge_Card_Image_Alt_Tag,
                                new { @class = "form-control", required = "required" })
                        </div>
                    </div>

                    <div class="row g-3 mt-2">
                        <div class="col-md-6">
                            <label class="form-label">Card Name</label>
                            @Html.TextBoxFor(m => m.Knowledge_Card_Obj.Knowledge_Card_Name,
                                new { @class = "form-control", required = "required" })
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Description</label>
                            @Html.TextAreaFor(m => m.Knowledge_Card_Obj.Knowledge_Card_Description,
                                new { @class = "form-control", id = "Knowledge_Card_Description", rows = "4", required = "required" })
                        </div>
                    </div>

                    @Html.HiddenFor(x => x.Knowledge_Card_Obj.Knowledge_Card_Id)
                    @Html.HiddenFor(x => x.Knowledge_Card_Obj.Knowledge_Card_Image)

                    <button class="btn btn-primary mt-3">Update</button>
                }
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdn.ckeditor.com/ckeditor5/12.0.0/classic/ckeditor.js"></script>

    <script>
        $(document).ready(function () {

            // CKEditor
            if (document.querySelector('#Knowledge_Card_Description')) {
                ClassicEditor.create(document.querySelector('#Knowledge_Card_Description'));
            }

            // Dropify
            $('.dropify').dropify();

            // DataTable
            if ($.fn.DataTable && !$.fn.DataTable.isDataTable('#basic-1')) {
                $('#basic-1').DataTable({ responsive: true });
            }

            // Toast
            var msg = '@Message';
            if (msg) {
                iziToast['@Type']({
                    title: '@Title',
                    message: msg,
                    position: 'topRight'
                });
            }
        });

        function confirmDelete(url) {
            iziToast.question({
                timeout: false,
                close: false,
                overlay: true,
                title: 'Confirm Delete',
                message: 'Are you sure you want to delete this record?',
                position: 'center',
                buttons: [
                    ['<button><b>YES</b></button>', function (instance, toast) {
                        instance.hide({}, toast);
                        window.location.href = url;
                    }, true],
                    ['<button>NO</button>', function (instance, toast) {
                        instance.hide({}, toast);
                    }]
                ]
            });
        }
    </script>
}
