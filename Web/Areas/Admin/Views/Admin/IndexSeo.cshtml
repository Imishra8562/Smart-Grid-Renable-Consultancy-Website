@{
    ViewBag.Title = "IndexSeo";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-sm-6">
                    <h3>Index SEO</h3>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#"><i data-feather="home"></i></a></li>
                        <li class="breadcrumb-item">Index</li>
                        <li class="breadcrumb-item active">Index SEO</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <!-- Form Start -->
    <div class="container-fluid form-validate">
        <div class="row">
            <div class="col-sm-12">

                <div class="card">
                    <div class="card-header pb-0">
                        <h4>Index SEO Details</h4>
                    </div>

                    <div class="card-body">
                        <form class="needs-validation" novalidate="">

                            <div class="row g-3">

                                <!-- Index_Seo_Code -->
                                <div class="col-md-4">
                                    <label class="form-label">SEO Code</label>
                                    <input class="form-control" name="Index_Seo_Code" type="text" required="">
                                    <div class="invalid-feedback">Please enter SEO code.</div>
                                </div>

                                <!-- Index_Seo_Page_Title -->
                                <div class="col-md-8">
                                    <label class="form-label">Page Title</label>
                                    <input class="form-control" name="Index_Seo_Page_Title" type="text" required="">
                                    <div class="invalid-feedback">Please enter page title.</div>
                                </div>

                            </div>

                            <div class="row g-3 mt-2">

                                <!-- Index_Seo_Meta_Keyword -->
                                <div class="col-md-6">
                                    <label class="form-label">Meta Keywords</label>
                                    <input class="form-control" name="Index_Seo_Meta_Keyword" type="text" required="">
                                    <div class="invalid-feedback">Please enter meta keywords.</div>
                                </div>

                                <!-- Index_Seo_Meta_Description -->
                                <div class="col-md-6">
                                    <label class="form-label">Meta Description</label>
                                    <input class="form-control" name="Index_Seo_Meta_Description" type="text" required="">
                                    <div class="invalid-feedback">Please enter meta description.</div>
                                </div>

                            </div>

                            <div class="row g-3 mt-2">

                                <!-- Index_Seo_Og_Image -->
                                <div class="col-md-6">
                                    <label class="form-label">OG Image URL</label>
                                    <input class="form-control" name="Index_Seo_Og_Image" type="text" required>
                                    <div class="invalid-feedback">Please enter OG image URL.</div>
                                </div>

                                <!-- Index_Seo_Image_Alt_Tag -->
                                <div class="col-md-6">
                                    <label class="form-label">Image Alt Tag</label>
                                    <input class="form-control" name="Index_Seo_Image_Alt_Tag" type="text" required>
                                    <div class="invalid-feedback">Please enter image alt tag.</div>
                                </div>

                            </div>

                            <div class="row g-3 mt-2">

                                <!-- Index_Seo_Og_Title -->
                                <div class="col-md-6">
                                    <label class="form-label">OG Title</label>
                                    <input class="form-control" name="Index_Seo_Og_Title" type="text" required>
                                    <div class="invalid-feedback">Please enter OG title.</div>
                                </div>

                                <!-- Index_Seo_Og_Description -->
                                <div class="col-md-6">
                                    <label class="form-label">OG Description</label>
                                    <input class="form-control" name="Index_Seo_Og_Description" type="text" required>
                                    <div class="invalid-feedback">Please enter OG description.</div>
                                </div>

                            </div>


                            <div class="row g-3 mt-2">

                                <!-- Index_Seo_Slug -->
                                <div class="col-md-12">
                                    <label class="form-label">SEO Slug (URL)</label>
                                    <input class="form-control" name="Index_Seo_Slug" type="text" required="">
                                    <div class="invalid-feedback">Please enter slug.</div>
                                </div>

                            </div>

                            <button class="btn btn-primary mt-3" type="submit">Save SEO</button>

                        </form>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>
