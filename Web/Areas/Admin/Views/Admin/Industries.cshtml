        </div>
    </div>

    @if (Model.Industries_Obj == null)
    {
        <!-- ===================== ADD NEW FORM ======================= -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header pb-0">
                        <h4>Add Industries Details</h4>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("SaveIndustries", "Admin", FormMethod.Post,
                            new { @class = "needs-validation", enctype = "multipart/form-data", novalidate = "novalidate" }))
                        {
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <label class="form-label">Industries Name</label>
                                    @Html.TextBoxFor(m => m.Industries_Obj.Industries_Name,
                                        new { @class = "form-control", @placeholder = "Enter industry name", @required = "required" })
                                    <div class="invalid-feedback">
                                        Please enter industry name.
                                    </div>
                                </div>

                                <div class="col-md-8">
                                    <label class="form-label">Industries Title</label>
                                    @Html.TextBoxFor(m => m.Industries_Obj.Industries_Page_Title,
                                        new { @class = "form-control", @placeholder = "Enter page title", @required = "required" })
                                    <div class="invalid-feedback">
                                        Please enter page title.
                                    </div>
                                </div>
                            </div>

                            <div class="row g-3 mt-2">
                                <div class="col-md-6">
                                    <label class="form-label">Meta Keyword</label>
                                    @Html.TextAreaFor(m => m.Industries_Obj.Industries_Meta_Keyword,
                                        new { @class = "form-control", @rows = "5", @placeholder = "Enter meta keywords", @required = "required" })
                                    <div class="invalid-feedback">
                                        Please enter meta keywords.
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label">Meta Description</label>
                                    @Html.TextAreaFor(m => m.Industries_Obj.Industries_Meta_Description,
                                        new { @class = "form-control", @rows = "5", @placeholder = "Enter meta description", @required = "required" })
                                    <div class="invalid-feedback">
                                        Please enter meta description.
                                    </div>
                                </div>
                            </div>

                            <div class="row g-3 mt-2">
                                <div class="col-md-6">
                                    <label class="form-label">News Keyword</label>
                                    @Html.TextAreaFor(m => m.Industries_Obj.Industries_News_Keyword,
                                        new { @class = "form-control", @rows = "5", @placeholder = "Enter news keywords", @required = "required" })
                                    <div class="invalid-feedback">
                                        Please enter news keywords.
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label">News Description</label>
                                    @Html.TextAreaFor(m => m.Industries_Obj.Industries_News_Description,
                                        new { @class = "form-control", @rows = "5", @placeholder = "Enter news description", @required = "required" })
                                    <div class="invalid-feedback">
                                        Please enter news description.
                                    </div>
                                </div>
                            </div>

                            <div class="row g-3 mt-2">
                                <div class="col-md-6">
                                    <label class="form-label">Industries Image</label>
                                    @{
                                        var defaultImagePath = Url.Content("~/Areas/Admin/Content/Dropify/file-upload.png");
                                    }
                                    @Html.TextBoxFor(m => m.Industries_Image,
                                        new
                                             {
                                                 @class = "dropify",
                                                 type = "file",
                                              data_default_file = defaultImagePath,
                                              data_max_file_size = "5M",
                                              data_allowed_file_extensions = "jpg png jpeg webp",
                                              @required = "required"
                                             })
                                    <div class="invalid-feedback">
                                        Please upload industry image.
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label">Meta OG Image</label>
                                    @Html.TextBoxFor(m => m.Industries_Og_Image,
                                        new
                                             {
                                                 @class = "dropify",
                                                 type = "file",
                                              data_default_file = defaultImagePath,
                                              data_max_file_size = "5M",
                                              data_allowed_file_extensions = "jpg png jpeg webp",
                                              @required = "required"
                                             })
                                    <div class="invalid-feedback">
                                        Please upload OG image.
                                    </div>
                                </div>
                            </div>

                            <div class="row g-3 mt-2">
                                <div class="col-md-6">
                                    <label class="form-label">Image Alt Tag</label>
                                    @Html.TextBoxFor(m => m.Industries_Obj.Industries_Image_Alt_Tag,
                                        new { @class = "form-control", @placeholder = "Enter image alt text", @required = "required" })
                                    <div class="invalid-feedback">
                                        Please enter image alt tag.
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label">OG Title</label>
                                    @Html.TextBoxFor(m => m.Industries_Obj.Industries_Og_Title,
                                        new { @class = "form-control", @placeholder = "Enter OG title", @required = "required" })
                                    <div class="invalid-feedback">
                                        Please enter OG title.
                                    </div>
                                </div>
                            </div>

                            <div class="row g-3 mt-2">
                                <div class="col-md-6">
                                    <label class="form-label">OG Description</label>
                                    @Html.TextAreaFor(m => m.Industries_Obj.Industries_Og_Description,
                                        new { @class = "form-control", @rows = "3", @placeholder = "Enter OG description", @required = "required" })
                                    <div class="invalid-feedback">
                                        Please enter OG description.
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Industries Description</label>
                                    @Html.TextAreaFor(m => m.Industries_Obj.Industries_Description, new { @class = "form-control", @rows = "5", @id = "Industries_Description" })
                                    <div class="invalid-feedback">
                                        Please enter Industries description.
                                    </div>
                                </div>

                            </div>

                            <div class="row g-3 mt-2">
                                <div class="col-md-12">
                                    <label class="form-label">Page URL Link</label>
                                    @Html.TextBoxFor(m => m.Industries_Obj.Industries_Url_Link,
                                        new { @class = "form-control", @placeholder = "Enter URL link" })
                                </div>
                            </div>

                            @Html.HiddenFor(x => x.Industries_Obj.Industries_Id)
                            @Html.HiddenFor(x => x.Industries_Obj.Industries_Code)

                            <div class="row g-3 mt-3">
                                <div class="col-md-12">
                                    <button class="btn btn-primary" type="submit">Save Industry</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- ================= LIST TABLE ================ -->
        <div class="row mt-3">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header pb-0">
                        <h4>Industries List</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive theme-scrollbar">
                            <table class="display datatable" id="basic-1">
                                <thead>
                                    <tr>
                                        <th>S.No</th>
                                        <th>Industry Name</th>
                                        <th>Industry Title</th>
                                        <th>Industry Image</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.List_Industries_Obj != null && Model.List_Industries_Obj.Count > 0)
                                    {
                                        foreach (var items in Model.List_Industries_Obj)
                                        {
                                            <tr>
                                                <td>@(++i)</td>
                                                <td>@items.Industries_Name</td>
                                                <td>@items.Industries_Page_Title</td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(items.Industries_Image))
                                                    {
                                                        <img src="@Url.Content(items.Industries_Image)"
                                                             style="width:100px; height:70px; object-fit:cover;"
                                                             class="img-thumbnail"
                                                             alt="@items.Industries_Image_Alt_Tag" />
                                                    }
                                                    else
                                                    {
                                                        <span class="badge badge-light">No Image</span>
                                                    }
                                                </td>
                                                <td>
                                                    <div class="btn-group" role="group">
                                                        <a href="@Url.Action("Industries", "Admin",
                                                                 new { Industries_Id = items.Industries_Id })"
                                                           class="btn btn-warning btn-sm">
                                                            <i class="fa fa-edit"></i> Edit
                                                        </a>

                                                        <a href="@Url.Action("DeleteIndustries", "Admin",
                                                                 new { Industries_Id = items.Industries_Id })"
                                                           class="btn btn-danger btn-sm"
                                                           onclick="return confirm('Are you sure you want to delete this industry?')">
                                                            <i class="fa fa-trash"></i> Delete
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="5" class="text-center">
                                                <div class="alert alert-light" role="alert">
                                                    No industries found. Add your first industry!
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- ===================== EDIT FORM ======================= -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header pb-0">
                        <h4>Edit Industry Details</h4>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("UpdateIndustries", "Admin", FormMethod.Post,
                            new { @class = "needs-validation", enctype = "multipart/form-data", novalidate = "novalidate" }))
                        {
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <label class="form-label">Industries Name</label>
                                    @Html.TextBoxFor(m => m.Industries_Obj.Industries_Name,
                                        new { @class = "form-control", @placeholder = "Enter industry name", @required = "required" })
                                    <div class="invalid-feedback">
                                        Please enter industry name.
                                    </div>
                                </div>

                                <div class="col-md-8">
                                    <label class="form-label">Industries Title</label>
                                    @Html.TextBoxFor(m => m.Industries_Obj.Industries_Page_Title,
                                        new { @class = "form-control", @placeholder = "Enter page title", @required = "required" })
                                    <div class="invalid-feedback">
                                        Please enter page title.
                                    </div>
                                </div>
                            </div>

                            <div class="row g-3 mt-2">
                                <div class="col-md-6">
                                    <label class="form-label">Meta Keyword</label>
                                    @Html.TextAreaFor(m => m.Industries_Obj.Industries_Meta_Keyword,
                                        new { @class = "form-control", @rows = "5", @placeholder = "Enter meta keywords", @required = "required" })
                                    <div class="invalid-feedback">
                                        Please enter meta keywords.
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label">Meta Description</label>
                                    @Html.TextAreaFor(m => m.Industries_Obj.Industries_Meta_Description,
                                        new { @class = "form-control", @rows = "5", @placeholder = "Enter meta description", @required = "required" })
                                    <div class="invalid-feedback">
                                        Please enter meta description.
                                    </div>
                                </div>
                            </div>

                            <div class="row g-3 mt-2">
                                <div class="col-md-6">
                                    <label class="form-label">News Keyword</label>
                                    @Html.TextAreaFor(m => m.Industries_Obj.Industries_News_Keyword,
                                        new { @class = "form-control", @rows = "5", @placeholder = "Enter news keywords", @required = "required" })
                                    <div class="invalid-feedback">
                                        Please enter news keywords.
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label">News Description</label>
                                    @Html.TextAreaFor(m => m.Industries_Obj.Industries_News_Description,
                                        new { @class = "form-control", @rows = "5", @placeholder = "Enter news description", @required = "required" })
                                    <div class="invalid-feedback">
                                        Please enter news description.
                                    </div>
                                </div>
                            </div>

                            <div class="row g-3 mt-2">
                                <div class="col-md-6">
                                    <label class="form-label">Industries Image</label>
                                    @{
                                        var currentImage = !string.IsNullOrEmpty(Model.Industries_Obj.Industries_Image)
                                            ? Url.Content(Model.Industries_Obj.Industries_Image)
                                            : Url.Content("~/Areas/Admin/Content/Dropify/file-upload.png");
                                    }
                                    @Html.TextBoxFor(m => m.Industries_Image,
                                        new
                                             {
                                                 @class = "dropify",
                                                 type = "file",
                                              data_default_file = currentImage,
                                              data_max_file_size = "5M",
                                              data_allowed_file_extensions = "jpg png jpeg webp"
                                             })
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label">Meta OG Image</label>
                                    @{
