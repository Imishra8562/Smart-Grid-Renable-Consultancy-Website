                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Industries Description</label>
                                    @Html.TextAreaFor(m => m.Industries_Obj.Industries_Description,
                                        new { @class = "form-control", @rows = "5", @id = "Industries_Description" })
