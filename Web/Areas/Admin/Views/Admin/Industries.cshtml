                                            ? Url.Content(Model.Industries_Obj.Industries_Og_Image)
                                            : Url.Content("~/Areas/Admin/Content/Dropify/file-upload.png");
                                    }
                                    @Html.TextBoxFor(m => m.Industries_Og_Image,
                                        new
                                             {
