            })
            .catch(error => {
                console.error('CKEditor Error:', error);
            });
    </script>
    <script>
        $(document).ready(function () {
            // Initialize dropify for file uploads
            $('.dropify').dropify({
                messages: {
                    'default': 'Drag and drop a file here or click',
                    'replace': 'Drag and drop or click to replace',
                    'remove': 'Remove',
                    'error': 'Ooops, something wrong appended.'
                },
                error: {
                    'fileSize': 'The file size is too big (5M max).',
                    'fileExtension': 'Only jpg, png, jpeg, webp files are allowed.'
                }
            });

            // Initialize DataTable
            var dataTable = $('#basic-1');
            if (dataTable.length && !$.fn.DataTable.isDataTable('#basic-1')) {
                dataTable.DataTable({
                    responsive: true,
                    pageLength: 10,
                    language: {
                        search: "_INPUT_",
                        searchPlaceholder: "Search Engineering Services..."
                    }
                });
            }

            // Toast notifications
            var Message = '@Message';
            if (Message != '') {
                if ('@Type' == 'success') {
                    iziToast.success({
                        title: '@Title',
                        message: '@Message',
                        position: 'topRight'
                    });
                }
                else if ('@Type' == 'warning') {
                    iziToast.warning({
                        title: '@Title',
                        message: '@Message',
                        position: 'topRight'
                    });
                }
                else if ('@Type' == 'error') {
                    iziToast.error({
                        title: '@Title',
                        message: '@Message',
                        position: 'topRight'
                    });
                }
            }

            // Form validation
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        });

        // Delete confirmation
        function confirmDelete(url) {
            event.preventDefault();
            iziToast.question({
                timeout: false,
                close: false,
                overlay: true,
                displayMode: 'once',
                id: 'question',
                zindex: 999,
                title: 'Confirm Delete',
                message: 'Are you sure you want to delete this Engineering Services?',
                position: 'center',
                buttons: [
                    ['<button><b>YES</b></button>', function (instance, toast) {
                        instance.hide({ transitionOut: 'fadeOut' }, toast, 'button');
                        window.location.href = url;
                    }, true],
                    ['<button>NO</button>', function (instance, toast) {
                        instance.hide({ transitionOut: 'fadeOut' }, toast, 'button');
                    }]
                ]
            });
        }
    </script>
