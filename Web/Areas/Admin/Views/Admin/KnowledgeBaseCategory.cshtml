@model Web.Areas.Admin.Model.MasterModel
@{
    ViewBag.Title = "KnowledgeBaseCategory";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var Type = TempData["AlertType"] ?? string.Empty;
    var Title = TempData["AlertTitle"] ?? string.Empty;
    var Message = TempData["AlertMessage"] ?? string.Empty;
    int i = 0;
}
<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-sm-6"><h3>Knowledge Base Category</h3></div>
                <div class="col-sm-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#"><i data-feather="home"></i></a></li>
                        <li class="breadcrumb-item">Master</li>
                        <li class="breadcrumb-item active">Knowledge Base Category</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Knowledge_Base_Category_Obj == null)
    {
        <!-- ===================== ADD NEW FORM ======================= -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header pb-0">
                        <h4>Add Knowledge Base Category Details</h4>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("SaveKnowledgeBaseCategory", "Admin", FormMethod.Post, new { @Class = "row g-3 needs-validation", @novalidate = "novalidate", @enctype = "multipart/form-data" }))
                        {

                            <div class="col-md-6">
                                <label for="validationCustom02" class="form-label">Knowledge Base Category Name</label>
                                @Html.TextBoxFor(m => m.Knowledge_Base_Category_Obj.Category_Name, new { @class = "form-control", @type = "text", @id = "validationCustom02", @placeholder = "Knowledge Base Category", @required = "required" })
                                <div class="invalid-feedback">
                                    Please Enter your Knowledge Base Category.
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="validationCustom03" class="form-label">Category Url Slug</label>
                                @Html.TextBoxFor(m => m.Knowledge_Base_Category_Obj.Category_Description, new { @class = "form-control", @type = "text", @id = "validationCustom03", @placeholder = "Category Url Slug" })
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>


                            <div class="col-12">
                                <button class="btn btn-primary" type="submit">Submit form</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4 class="mb-0 text-nowrap">Knowledge Base Category</h4>
                <div class="d-flex align-items-center gap-2">

                    <!-- Visible Buttons (First 3) -->
                    <a href="@Url.Action("KnowledgeBase", "Admin")"
                       class="btn btn-primary btn-sm text-nowrap">
                        <i class="fa fa-plus me-1"></i> Add Base
                    </a>

                    <a href="@Url.Action("KnowledgeCard", "Admin")"
                       class="btn btn-info btn-sm text-nowrap">
                        <i class="fa fa-plus me-1"></i> Add Card
                    </a>

                    <a href="@Url.Action("KnowledgeFailureMode", "Admin")"
                       class="btn btn-info btn-sm text-nowrap">
                        <i class="fa fa-plus me-1"></i> Failure Mode
                    </a>

                    <!-- Dropdown -->
                    <div class="dropdown">
                        <button class="btn btn-secondary btn-sm dropdown-toggle"
                                type="button"
                                data-bs-toggle="dropdown"
                                aria-expanded="false">
                            More
                        </button>

                        <ul class="dropdown-menu dropdown-menu-end">
                            <li>
                                <a class="dropdown-item"
                                   href="@Url.Action("KnowledgeRelatedSolution", "Admin")">
                                    <i class="fa fa-link me-2"></i> Related Solution
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item"
                                   href="@Url.Action("KnowledgeWorkflowStep", "Admin")">
                                    <i class="fa fa-random me-2"></i> Workflow Step
                                </a>
                            </li>
                        </ul>
                    </div>

                </div>
            </div>

            <div class="card-body">
                <div class="table-responsive theme-scrollbar">
                    <table class="display datatable" id="basic-1">
                        <thead>
                            <tr>
                                <th>S.No</th>
                                <th>Knowledge Base Category Name</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.List_Knowledge_Base_Category_Obj != null && Model.List_Knowledge_Base_Category_Obj.Count > 0)
                            {
                                foreach (var items in Model.List_Knowledge_Base_Category_Obj)
                                {
                                    <tr>
                                        <td>@(++i)</td>
                                        <td>@items.Category_Name</td>
                                        <td>
                                            <div class="btn-group">
                                                <div class="btn-group">
                                                    <a href="@Url.Action("KnowledgeBaseCategory", "Admin", new { Knowledge_Base_Category_Id = items.Knowledge_Base_Category_Id })"
                                                       class="btn btn-warning btn-sm"
                                                       title="Edit">
                                                        <i class="fa fa-edit me-1"></i> Edit
                                                    </a>

                                                    <a href="@Url.Action("DeleteKnowledgeBaseCategory", "Admin", new { Knowledge_Base_Category_Id = items.Knowledge_Base_Category_Id })"
                                                       class="btn btn-danger btn-sm"
                                                       title="Delete"
                                                       onclick="return confirm('Are you sure you want to delete this category?');">
                                                        <i class="fa fa-trash me-1"></i> Delete
                                                    </a>
                                                </div>

                                            </div>
                                        </td>
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- ===================== EDIT FORM ======================= -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header pb-0">
                        <h4>Edit Knowledge Base Category Details</h4>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("UpdateKnowledgeBaseCategory", "Admin", FormMethod.Post, new { @Class = "row g-3 needs-validation", @novalidate = "novalidate", @enctype = "multipart/form-data" }))
                        {
                            <div class="col-md-6">
                                <label for="validationCustom02" class="form-label">Knowledge Base Category Name</label>
                                @Html.TextBoxFor(m => m.Knowledge_Base_Category_Obj.Category_Name, new { @class = "form-control", @type = "text", @id = "validationCustom02", @placeholder = "Knowledge Base Category" })
                                <div class="invalid-feedback">
                                    Please Enter your Knowledge Base Category.
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="validationCustom03" class="form-label">Category Url Slug</label>
                                @Html.TextBoxFor(m => m.Knowledge_Base_Category_Obj.Category_Description, new { @class = "form-control", @type = "text", @id = "validationCustom03", @placeholder = "Description" })
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            @Html.HiddenFor(x => x.Knowledge_Base_Category_Obj.Knowledge_Base_Category_Id)

                            <div class="col-12">
                                <button class="btn btn-primary" type="submit">Submit form</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>