@model Web.Areas.Admin.Model.MasterModel
@{
    ViewBag.Title = "EngineeringServicesSubTopic";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var Type = TempData["AlertType"] ?? string.Empty;
    var Title = TempData["AlertTitle"] ?? string.Empty;
    var Message = TempData["AlertMessage"] ?? string.Empty;
    int i = 0;
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-sm-6"><h3>Engineering Services SubTopic</h3></div>
                <div class="col-sm-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#"><i data-feather="home"></i></a></li>
                        <li class="breadcrumb-item">Master</li>
                        <li class="breadcrumb-item active">Engineering Services SubTopic</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Engineering_Services_SubTopic_Obj == null)
    {
        <!-- ===================== ADD NEW FORM ======================= -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header pb-0">
                        <h4>Add Engineering Services SubTopic Details</h4>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("SaveEngineeringServicesSubTopic", "Admin", FormMethod.Post, new { @class = "needs-validation", enctype = "multipart/form-data", novalidate = "novalidate" }))
                        {
                            <div class="row g-3">

                                <!-- Engineering Service Selection -->
                                <div class="col-md-4">
                                    <label class="form-label">Engineering Service</label>
                                    @Html.DropDownListFor(m => m.Engineering_Services_SubTopic_Obj.FK_Engineering_Services_Id, new SelectList(Model.List_Engineering_Services_Obj, "Engineering_Services_Id", "Engineering_Services_Name"), "-- Select Engineering Service --", new { @class = "form-control", required = "required" })
                                    <div class="invalid-feedback">
                                        Please select an Engineering Service.
                                    </div>
                                </div>

                                <!-- SubTopic Name -->
                                <div class="col-md-4">
                                    <label class="form-label">SubTopic Name</label>
                                    @Html.TextBoxFor(m => m.Engineering_Services_SubTopic_Obj.Engineering_Services_SubTopic_Name, new { @class = "form-control", placeholder = "Enter SubTopic Name", required = "required", maxlength = "150" })
                                    <div class="invalid-feedback">
                                        Please enter SubTopic Name.
                                    </div>
                                </div>

                                <!-- SubTopic Icon Class -->
                                <div class="col-md-4">
                                    <label class="form-label">Select SubTopic Icon</label>

                                    <select class="form-select"
                                            onchange="setIconClass(this.value)">
                                        <option value="">-- Select Icon --</option>

                                        @foreach (var icon in ViewBag.IconList as List<string>)
                                        {
                                            <option value="@icon">@icon</option>
                                        }
                                    </select>

                                    <div class="mt-2">
                                        <span class="fa-icon">
                                            <i id="iconPreview" class="fs-3 text-primary"></i>
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <!-- SubTopic Description -->
                            <div class="row g-3 mt-2">
                                <div class="col-md-8">
                                    <label class="form-label">SubTopic Description</label>
                                    @Html.TextAreaFor(m => m.Engineering_Services_SubTopic_Obj.Engineering_Services_SubTopic_Description, new { @class = "form-control", rows = "5", placeholder = "Enter SubTopic Description", required = "required", maxlength = "1000" ,id = "Engineering_Services_SubTopic_Description" })
                                    <div class="invalid-feedback">
                                        Please enter SubTopic Description.
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">SubTopic Icon Class</label>
                                    @Html.TextBoxFor(m => m.Engineering_Services_SubTopic_Obj.Engineering_Services_SubTopic_IconClass, new { @class = "form-control", id = "IconClassInput", placeholder = "e.g. fa-solid fa-network-wired", required = "required", maxlength = "100" })
                                    <div class="invalid-feedback">
                                        Please enter SubTopic Icon Class.
                                    </div>
                                </div>

                            </div>

                            <!-- Hidden Fields for Update -->
                            @Html.HiddenFor(x => x.Engineering_Services_SubTopic_Obj.Engineering_Services_SubTopic_Id)
                            <!-- Submit Button -->
                            <div class="row g-3 mt-3">
                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-primary">
                                        Save Engineering Services SubTopic
                                    </button>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4 class="mb-0 text-nowrap">Engineering Services SubTopic</h4>
                <div class="d-flex align-items-center gap-2">

                    <!-- Visible Buttons (First 3) -->
                    <a href="@Url.Action("EngineeringServicesSubTopic", "Admin")"
                       class="btn btn-primary btn-sm text-nowrap">
                        <i class="fa fa-plus me-1"></i> Add Base
                    </a>

                    <a href="@Url.Action("KnowledgeCard", "Admin")"
                       class="btn btn-info btn-sm text-nowrap">
                        <i class="fa fa-plus me-1"></i> Add Card
                    </a>

                    <a href="@Url.Action("KnowledgeFailureMode", "Admin")"
                       class="btn btn-info btn-sm text-nowrap">
                        <i class="fa fa-plus me-1"></i> Failure Mode
                    </a>

                    <!-- Dropdown -->
                    <div class="dropdown">
                        <button class="btn btn-secondary btn-sm dropdown-toggle"
                                type="button"
                                data-bs-toggle="dropdown"
                                aria-expanded="false">
                            More
                        </button>

                        <ul class="dropdown-menu dropdown-menu-end">
                            <li>
                                <a class="dropdown-item"
                                   href="@Url.Action("KnowledgeRelatedSolution", "Admin")">
                                    <i class="fa fa-link me-2"></i> Related Solution
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item"
                                   href="@Url.Action("KnowledgeWorkflowStep", "Admin")">
                                    <i class="fa fa-random me-2"></i> Workflow Step
                                </a>
                            </li>
                        </ul>
                    </div>

                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive theme-scrollbar">
                    <table class="display datatable" id="basic-1">
                        <thead>
                            <tr>
                                <th style="width:5%">S.No</th>
                                <th>Engineering Service</th>
                                <th>SubTopic title</th>
                                <th>Description</th>
                                <th style="width:15%">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.List_Engineering_Services_SubTopic_Obj != null && Model.List_Engineering_Services_SubTopic_Obj.Count > 0)
                            {
                                foreach (var item in Model.List_Engineering_Services_SubTopic_Obj)
                                {
                                    <tr>
                                        <td>@(++i)</td>
                                        <td>
                                            @{
                                                var serviceName = Model.List_Engineering_Services_Obj.FirstOrDefault(x => x.Engineering_Services_Id == item.FK_Engineering_Services_Id).Engineering_Services_Name;
                                            }

                                            @serviceName
                                        </td>

                                        <!-- SubTopic Name -->
                                        <td>
                                            <strong>@item.Engineering_Services_SubTopic_Name</strong>
                                        </td>
                                        <td>
                                            <span class="fa-icon">
                                                <i class="@item.Engineering_Services_SubTopic_IconClass me-2 fs-5"></i>
                                            </span>
                                            <span class="text-muted">@item.Engineering_Services_SubTopic_IconClass</span>
                                        </td>

                                        <!-- Description (Trimmed) -->
                                        <td>
                                            @{
                                                var desc = item.Engineering_Services_SubTopic_Description;
                                                if (!string.IsNullOrEmpty(desc) && desc.Length > 80)
                                                {
                                                    @desc.Substring(0, 80)<text>...</text>
                                                }
                                                else
                                                {
                                                    @desc
                                                }
                                            }
                                        </td>

                                        <!-- Actions -->
                                        <td class="text-center">
                                            <div class="btn-group btn-group-sm" role="group">
                                                <a href="@Url.Action("EngineeringServicesSubTopic", "Admin", new { Engineering_Services_SubTopic_Id = item.Engineering_Services_SubTopic_Id })" class="btn btn-warning" title="Edit SubTopic">
                                                    <i class="fa fa-edit"></i>
                                                </a>

                                                <a href="@Url.Action( "DeleteEngineeringServicesSubTopic", "Admin", new { Engineering_Services_SubTopic_Id = item.Engineering_Services_SubTopic_Id })" class="btn btn-danger" title="Delete SubTopic" onclick="return confirm('Are you sure you want to delete this Engineering Service SubTopic?');">
                                                    <i class="fa fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center">
                                        <div class="alert alert-light" role="alert">
                                            No Engineering Services found. Add your first Engineering SubTopic Services!
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- ===================== EDIT FORM ======================= -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header pb-0">
                        <h4>Edit Engineering Services SubTopic Details</h4>
                    </div>
                    <div class="card-body">
                        <div class="card-body">
                            @using (Html.BeginForm("UpdateEngineeringServicesSubTopic", "Admin", FormMethod.Post, new { @class = "needs-validation", enctype = "multipart/form-data", novalidate = "novalidate" }))
                            {
                                <div class="row g-3">

                                    <!-- Engineering Service Selection -->
                                    <div class="col-md-4">
                                        <label class="form-label">Engineering Service</label>
                                        @Html.DropDownListFor(m => m.Engineering_Services_SubTopic_Obj.FK_Engineering_Services_Id, new SelectList(Model.List_Engineering_Services_Obj, "Engineering_Services_Id", "Engineering_Services_Name"), "-- Select Engineering Service --", new { @class = "form-control", required = "required" })
                                        <div class="invalid-feedback">
                                            Please select an Engineering Service.
                                        </div>
                                    </div>

                                    <!-- SubTopic Name -->
                                    <div class="col-md-4">
                                        <label class="form-label">SubTopic Name</label>
                                        @Html.TextBoxFor(m => m.Engineering_Services_SubTopic_Obj.Engineering_Services_SubTopic_Name, new { @class = "form-control", placeholder = "Enter SubTopic Name", required = "required", maxlength = "150" })
                                        <div class="invalid-feedback">
                                            Please enter SubTopic Name.
                                        </div>
                                    </div>

                                    <!-- SubTopic Icon Class -->
                                    <div class="col-md-4">
                                        <label class="form-label">Select SubTopic Icon</label>

                                        <select class="form-select"
                                                onchange="setIconClass(this.value)">
                                            <option value="">-- Select Icon --</option>

                                            @foreach (var icon in ViewBag.IconList as List<string>)
                                            {
                                                <option value="@icon">@icon</option>
                                            }
                                        </select>

                                        <div class="mt-2">
                                            <span class="fa-icon">
                                                <i id="iconPreview" class="fs-3 text-primary"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>

                                <!-- SubTopic Description -->
                                <div class="row g-3 mt-2">
                                    <div class="col-md-8">
                                        <label class="form-label">SubTopic Description</label>
                                        @Html.TextAreaFor(m => m.Engineering_Services_SubTopic_Obj.Engineering_Services_SubTopic_Description, new { @class = "form-control", rows = "5", placeholder = "Enter SubTopic Description", required = "required", maxlength = "1000" ,id= "Engineering_Services_SubTopic_Description" })
                                        <div class="invalid-feedback">
                                            Please enter SubTopic Description.
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label">SubTopic Icon Class</label>
                                        @Html.TextBoxFor(m => m.Engineering_Services_SubTopic_Obj.Engineering_Services_SubTopic_IconClass, new { @class = "form-control", id = "IconClassInput", placeholder = "e.g. fa-solid fa-network-wired", required = "required", maxlength = "100" })
                                        <div class="invalid-feedback">
                                            Please enter SubTopic Icon Class.
                                        </div>
                                    </div>

                                </div>

                                <!-- Hidden Id -->
                                @Html.HiddenFor(x => x.Engineering_Services_SubTopic_Obj.Engineering_Services_SubTopic_Id)

                                <!-- Submit -->
                                <div class="row g-3 mt-3">
                                    <div class="col-md-12">
                                        <button type="submit" class="btn btn-primary">
                                            Update Engineering Service SubTopic
                                        </button>
                                        <a href="@Url.Action("EngineeringServicesSubTopic", "Admin")"
                                           class="btn btn-secondary ms-2">
                                            Cancel
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

