
@model Web.Models.SecurityModel
@{   
    ViewBag.Title = "Forgetpassword";
    Layout = null;
    }

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--favicon-->
    <link rel="icon" href="~/Areas/Admin/Content/assets/images/favicon.png" type="image/png" />
    <!-- loader-->
    <link href="~/Areas/Admin/Content/assets/css/pace.min.css" rel="stylesheet" />
    <script src="~/Areas/Admin/Content/assets/js/pace.min.js"></script>
    <!-- Bootstrap CSS -->
    <link href="~/Areas/Admin/Content/assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Areas/Admin/Content/assets/css/bootstrap-extended.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&amp;display=swap" rel="stylesheet">
    <link href="~/Areas/Admin/Content/assets/css/app.css" rel="stylesheet">
    <link href="~/Areas/Admin/Content/assets/css/icons.css" rel="stylesheet">
    <title>Unicorn Technology</title>
</head>

<body class="bg-theme bg-theme1">
    <!-- wrapper -->
    <div class="wrapper">
        <div class="authentication-forgot d-flex align-items-center justify-content-center">
            <div class="card forgot-box">
                <div class="card-body">
                    <div class="p-4 rounded  border">
                        <div class="text-center">
                            <img src="~/Areas/Admin/Content/assets/images/unicorn-logo.png" width="120" alt="" />
                        </div>
                        <h4 class="mt-5 font-weight-bold">Forgot Password?</h4>
                        <p class="">Enter your registered email ID to reset the password</p>
                        @using (Html.BeginForm("Forgetpassword", "Security", FormMethod.Post, new { @Class = "row g-3 needs-validation", @novalidate = "true" }))
                        {
                            <div class="my-4">
                                <label for="User_Obj_Email_Id" class="form-label">Email Id *</label>
                                @Html.TextBoxFor(m => m.User_Obj.Email_Id, new { @class = "form-control", @type = "email", @placeholder = "Email Id", @required = "required" })
                            </div>
                            <div class="d-grid gap-2">
                                <button type="button" class="btn btn-light btn-lg">Send</button>
                                <a href="@Url.Action("Login", "Security")" class="btn btn-light btn-lg">
                                    <i class='bx bx-arrow-back me-1'></i>Back to Login
                                </a>
                            </div>}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end wrapper -->
    <!--plugins-->
    <script src="~/Areas/Admin/Content/assets/js/jquery.min.js"></script>

</body>


</html>


