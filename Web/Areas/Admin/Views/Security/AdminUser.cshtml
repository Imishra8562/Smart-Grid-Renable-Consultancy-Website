@model Web.Models.SecurityModel
@{
    ViewBag.Title = "Admin User";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    int i = 0;
}
<div class="page-body">

    <!-- Page Header -->
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-sm-6"><h3>Admin User</h3></div>
                <div class="col-sm-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#"><i data-feather="home"></i></a></li>
                        <li class="breadcrumb-item">Security</li>
                        <li class="breadcrumb-item active">Admin User</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <!-- Add / Edit User -->
    <div class="card">
        <div class="card-header pb-0"><h4>Add / Edit User</h4></div>

        <div class="card-body">
            @using (Html.BeginForm("SaveUser", "Security", FormMethod.Post, new { @class = "row g-3 needs-validation", @novalidate = "true" }))
            {
                <div class="row g-3">

                    <!-- User Name -->
                    <div class="col-md-8">
                        <label class="form-label">User Name</label>
                        @Html.TextBoxFor(m => m.User_Obj.User_Name,
                            new { @class = "form-control", @placeholder = "Enter User Name", required = "required" })
                        <div class="invalid-feedback">Please enter user name.</div>
                    </div>

                    <!-- Email -->
                    <div class="col-md-4">
                        <label class="form-label">Email Address</label>
                        @Html.TextBoxFor(m => m.User_Obj.Email_Id,
                            new { @class = "form-control", type = "email", @placeholder = "Email Address", required = "required" })
                        <div class="invalid-feedback">Please enter email address.</div>
                    </div>
                </div>

                <div class="row g-3 mt-2">

                    <!-- Mobile -->
                    <div class="col-md-6">
                        <label class="form-label">Mobile Number</label>
                        @Html.TextBoxFor(m => m.User_Obj.Mobile_No,
                            new
                                 {
                                @class = "form-control",
                                maxlength = "10",
                                onkeypress = "return isNumber(event,this)",
                                placeholder = "Mobile Number",
                                required = "required"
                            })
                        <div class="invalid-feedback">Please enter mobile number.</div>
                    </div>

                    <!-- Password -->
                    <div class="col-md-6">
                        <label class="form-label">Password</label>
                        @Html.TextBoxFor(m => m.Password,
                            new { @class = "form-control", type = "password", @placeholder = "Enter Password", required = "required" })
                        <div class="invalid-feedback">Please enter password.</div>
                    </div>
                </div>

                <div class="row g-3 mt-2">
                    <!-- User Role -->
                    <div class="col-md-6">
                        <label class="form-label">User Role</label>
                        @Html.DropDownListFor(m => m.User_Obj.FK_User_Role_Id,
                            new SelectList(Model.List_User_Role_Obj, "User_Role_Id", "User_Role_Name"),
                            "-- Select User Role --",
                            new { @class = "form-control", required = "required" })
                        <div class="invalid-feedback">Please select a role.</div>
                    </div>
                </div>

                <button class="btn btn-primary mt-3" type="submit">Submit</button>
            }
        </div>
    </div>

    <!-- User List -->
    <div class="container-fluid mt-3">
        <div class="row">
            <div class="col-sm-12">

                <div class="card">
                    <div class="card-header pb-0">
                        <h4>User List</h4>
                    </div>

                    <div class="card-body">
                        <div class="table-responsive theme-scrollbar">
                            <table class="display datatable" id="basic-1">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>User Name</th>
                                        <th>Email</th>
                                        <th>Mobile</th>
                                        <th>User Role</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @if (Model.List_User_Obj != null && Model.List_User_Obj.Count > 0)
                                    {
                                        foreach (var items in Model.List_User_Obj)
                                        {
                                            <tr>
                                                <td>@(++i)</td>
                                                <td>@items.User_Name</td>
                                                <td>@items.Email_Id</td>
                                                <td>@items.Mobile_No</td>
                                                <td>@items.User_Role_Name</td>

                                                <td>
                                                    <a href="@Url.Action("EditUser", "Security", new { User_Id = items.User_Id })"
                                                       class="btn btn-warning btn-sm">
                                                        <i class='bx bxs-edit'></i>
                                                    </a>

                                                    <a href="@Url.Action("DeleteUser", "Security", new { User_Id = items.User_Id })"
                                                       class="btn btn-danger btn-sm">
                                                        <i class='bx bxs-trash'></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>

                            </table>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>

</div>
