@model Web.Models.SecurityModel
@{
    ViewBag.Title = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <meta name="description" content="Smart Global Research & Consultancy Admin Login Screen">
    <meta name="keywords" content="admin login, dashboard login, mvc login screen">
    <meta name="author" content="Smart Global Research & Consultancy">

    <!-- Favicon -->
    <link rel="icon" href="~/Areas/Admin/Content/assets/images/favicon.png" type="image/x-icon" />
    <link rel="shortcut icon" href="~/Areas/Admin/Content/assets/images/favicon.png" type="image/x-icon" />

    <title>Welcome to SGRC | Smart Global Research & Consultancy - Login</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Vendor CSS (Tivo Style) -->
    <link rel="stylesheet" href="~/Areas/Admin/Content/assets/css/vendors/font-awesome.css">
    <link rel="stylesheet" href="~/Areas/Admin/Content/assets/css/vendors/icofont.css">
    <link rel="stylesheet" href="~/Areas/Admin/Content/assets/css/vendors/themify.css">
    <link rel="stylesheet" href="~/Areas/Admin/Content/assets/css/vendors/flag-icon.css">
    <link rel="stylesheet" href="~/Areas/Admin/Content/assets/css/vendors/feather-icon.css">

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/Areas/Admin/Content/assets/css/vendors/bootstrap.css">

    <!-- Main Style -->
    <link rel="stylesheet" href="~/Areas/Admin/Content/assets/css/style.css">
    <link rel="stylesheet" href="~/Areas/Admin/Content/assets/css/color-1.css" id="color" media="screen">

    <!-- Responsive -->
    <link rel="stylesheet" href="~/Areas/Admin/Content/assets/css/responsive.css">

</head>

<body>

    <!-- Loader -->
    <div class="loader-wrapper">
        <div class="dot"></div>
        <div class="dot"></div>
        <div class="dot"></div>
        <div class="dot"></div>
        <div class="dot"></div>
    </div>

    <!-- Login Page Start -->
    <div class="container-fluid">
        <div class="row">

            <!-- Left Image -->
            <div class="col-xl-5 p-0">
                <img class="bg-img-cover bg-center"
                     src="~/Areas/Admin/Content/assets/images/login/3.jpg"
                     alt="login background" />
            </div>

            <!-- Right Login Form -->
            <div class="col-xl-7 p-0">
                <div class="login-card">
                    <div>

                        <!-- Logo -->
                        <div class="text-center mb-3">
                            <a href="@Url.Action("Home","Home", new { Area = "" })"><img class="img-fluid for-light" src="~/Content/images/logo.png" alt="UNICORN Logo" /></a>
                        </div>

                        <div class="login-main">

                            @using (Html.BeginForm("AuthenticateUser", "Security", FormMethod.Post, new { @class = "theme-form" }))
                            {
                                <h4 class="text-center">Sign in to account</h4>
                                <p class="text-center">Enter your login credentials</p>

                                <!-- Email -->
                                <div class="form-group">
                                    <label>Email Address</label>
                                    @Html.TextBoxFor(m => m.User_Obj.Email_Id, new { @class = "form-control", @type = "email", @placeholder = "Email Id", @required = "required" })
                                </div>

                                <!-- Password -->
                                <div class="form-group">
                                    <label>Password</label>
                                    <div class="form-input position-relative">
                                        @Html.PasswordFor(m => m.User_Obj.Password, new { @class = "form-control", placeholder = "********", required = "required" })
                                        <div class="show-hide"><span class="show"></span></div>
                                    </div>
                                </div>

                                <!-- Remember + Forgot -->
                                <div class="form-group mb-0 d-flex justify-content-between">
                                    <div class="checkbox p-0">
                                        <input id="checkbox1" type="checkbox" checked />
                                        <label class="text-muted" for="checkbox1">Remember password</label>
                                    </div>

                                    <a class="link" href="@Url.Action("ForgetPassword", "Security")">Forgot password?</a>
                                </div>

                                <!-- Submit -->
                                <div class="text-end mt-3">
                                    <button class="btn btn-primary btn-block w-100" type="submit">
                                        Sign in
                                    </button>
                                </div>

                                <!-- Social login icons (optional) -->
                                <div class="login-social-title">
                                    <h6>Or Sign in with</h6>
                                </div>

                                <div class="form-group">
                                    <ul class="login-social">
                                        <li><a href="#"><i data-feather="linkedin"></i></a></li>
                                        <li><a href="#"><i data-feather="twitter"></i></a></li>
                                        <li><a href="#"><i data-feather="facebook"></i></a></li>
                                        <li><a href="#"><i data-feather="instagram"></i></a></li>
                                    </ul>
                                </div>

                            }

                        </div>
                    </div>
                </div>
            </div>

        </div>

        <!-- Scripts -->
        <script src="~/Areas/Admin/Content/assets/js/jquery-3.6.0.min.js"></script>
        <script src="~/Areas/Admin/Content/assets/js/bootstrap/bootstrap.bundle.min.js"></script>
        <script src="~/Areas/Admin/Content/assets/js/icons/feather-icon/feather.min.js"></script>
        <script src="~/Areas/Admin/Content/assets/js/icons/feather-icon/feather-icon.js"></script>
        <script src="~/Areas/Admin/Content/assets/js/script.js"></script>

    </div>

</body>
</html>