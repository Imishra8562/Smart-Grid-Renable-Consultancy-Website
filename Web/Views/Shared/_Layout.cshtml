<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="description" content="SGRC - Smart Global Renewable & Consultancy provides expert services in Power System Studies, Renewable Energy Integration, Cybersecurity, Engineering Consulting, and Smart Infrastructure.">
    <meta name="keywords" content="SGRC, Smart Global Renewable, Power System Studies, Renewable Energy, Engineering Consulting, Cybersecurity, FACTS, HVDC, PSS®E, PowerFactory, ETAP, Smart Grid, Energy Transition">
    <meta name="author" content="SGRC Services">
    <title>@ViewBag.Title - SGRC Services</title>


    <!-- Stylesheets -->
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/css/style.css" rel="stylesheet" />
    <link href="~/Content/css/responsive.css" rel="stylesheet" />

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/Content/images/favicon.png" type="image/x-icon" />
    <link rel="icon" href="~/Content/images/favicon.png" type="image/x-icon" />

    <!-- Responsive -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0,maximum-scale=1.0,user-scalable=0" />

    <!-- Font Awesome FIXED -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <!-- Font icons FIXED -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

</head>

<body>

    <div class="page-wrapper">

        <!-- Header -->
        @Html.Action("Header", "Home")

        <!-- Body Content -->
        @RenderBody()

        <!-- Call To Action Section -->
        <section class="call-back-section" style="background-image: url('@Url.Content("~/Content/images/background/6.jpg")')">
            <div class="auto-container">
                <div class="row clearfix">

                    <!-- Form Column -->
                    <div class="form-column col-lg-8 col-md-12 col-sm-12">
                        <div class="inner-column">

                            <div class="request-form">
                                <form method="post" action="/contact">
                                    <div class="row clearfix">
                                        <div class="form-group col-lg-6 col-md-6 col-sm-12">
                                            <label>Email Address</label>
                                            <input type="email" name="email" required />
                                        </div>
                                        <div class="form-group col-lg-6 col-md-6 col-sm-12">
                                            <label>Business Type</label>
                                            <select class="custom-select-box" required>
                                                <option value="">- Select -</option>
                                                <option>Business One</option>
                                                <option>Business Two</option>
                                            </select>
                                        </div>
                                        <div class="form-group col-lg-6 col-md-6 col-sm-12">
                                            <label>Phone</label>
                                            <input type="text" name="phone" required />
                                        </div>
                                        <div class="form-group col-lg-6 col-md-6 col-sm-12">
                                            <label>&nbsp;</label>
                                            <button class="theme-btn btn-style-thirteen" type="submit">
                                                Submit now <span class="icon fa fa-angle-right"></span>
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>

                        </div>
                    </div>

                    <!-- Title Column -->
                    <div class="title-column col-lg-4 col-md-12 col-sm-12">
                        <div class="inner-column">
                            <h2>Request a call back</h2>
                            <div class="text">
                                If you want to discuss your business with our fine consultants, please schedule a meeting through this contact form.
                            </div>
                            <a href="/contact" class="btn btn-warning px-4 fw-semibold">Contact Us</a>
                        </div>
                    </div>

                </div>
            </div>
        </section>

        <!-- Google Map Section -->
        <section class="map-section">
            <div class="map-outer">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d14389.226487816004!2d85.10038574849222!3d25.627947088975233!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x39ed59d33323a043%3A0x1ea60707cc44762c!2sPatliputra%20Colony%2C%20Patna%2C%20Bihar!5e0!3m2!1sen!2sin!4v1760459671690" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
            </div>
        </section>

        <!-- Footer -->
        @Html.Action("Footer", "Home")

    </div>

    <!-- Scripts -->
    <script src="~/Content/js/jquery.js"></script>
    <script src="~/Content/js/popper.min.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
    <script src="~/Content/js/jquery.mCustomScrollbar.concat.min.js"></script>
    <script src="~/Content/js/jquery.fancybox.js"></script>
    <script src="~/Content/js/appear.js"></script>
    <script src="~/Content/js/owl.js"></script>
    <script src="~/Content/js/wow.js"></script>
    <script src="~/Content/js/jquery-ui.js"></script>
    <script src="~/Content/js/main.js"></script>

    <!-- Google Maps API FIXED -->
    <script src="https://maps.google.com/maps/api/js?key=AIzaSyDTPlX-43R1TpcQUyWjFgiSfL_BiGxslZU"></script>
    <script src="~/Content/js/map-script.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
