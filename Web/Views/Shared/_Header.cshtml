<!-- ====== HEADER START ====== -->
<style>
  header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 1050;
    font-family: 'Poppins', sans-serif;
  }

  body { padding-top: 150px; }

  .header-top {
    background-color: #0a0a0a;
    color: #f8f9fa;
    font-size: 14px;
    padding: 6px 0;
    z-index: 1060;
    position: relative;
  }

  .header-top .contact-list { list-style: none; margin: 0; padding: 0; }
  .header-top .contact-list li { display: inline-block; margin-right: 20px; }
  .header-top i { color: #00bcd4; margin-right: 8px; }

  .header-upper {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(15px);
    transition: all 0.4s ease;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
  }

    .header-upper {
        transition: all 0.3s ease; /* ensures smooth animation */
        padding: 20px 0; /* normal height */
    }

        .header-upper.scrolled {
            background: rgba(255, 255, 255, 0.90);
            backdrop-filter: blur(25px);
            box-shadow: 0 4px 25px rgba(0, 0, 0, 0.4);
            padding: 8px 0; /* shrink effect */
            border-radius: 20px; /* optional, softer */
            margin: 12px;
        }


  .logo-box img {
    width: 140px;
    height: 80px;
    object-fit: contain;
    transition: all 0.3s ease;
  }

  .header-upper.scrolled .logo-box img {
    width: 120px;
    height: 70px;
  }

  .navbar-nav { margin-left: auto; align-items: center; }
  .navbar-nav .nav-link {
    color: #222 !important;
    font-weight: 500;
    padding: 12px 18px;
    transition: color 0.3s ease;
  }
  .navbar-nav .nav-link:hover, .navbar-nav .nav-link.active { color: #00bcd4 !important; }

  .dropdown-menu {
    background: rgba(17, 17, 17, 0.95);
    border: none; border-radius: 10px;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.3);
    animation: dropdownFade 0.25s ease;
  }
  .dropdown-item { color: #f8f9fa; padding: 10px 16px; font-size: 15px; }
  .dropdown-item:hover { background-color: #00bcd4; color: #fff; }

  @@keyframes dropdownFade {
    from { opacity: 0; transform: translateY(-8px); }
    to   { opacity: 1; transform: translateY(0); }
  }

  /* MOBILE STYLES */
  @@media (max-width: 992px) {
    .navbar { padding: 0; }
    .navbar-brand { flex-grow: 1; }

    .mobile-header { display: flex; justify-content: space-between; align-items: center; width: 100%; }
    .menu-label { display: flex; align-items: center; font-weight: 600; color: #000; font-size: 16px; letter-spacing: 0.5px; cursor: pointer; }
    .menu-label i { margin-left: 8px; font-size: 18px; }

    .navbar-collapse { width: 100%; background: rgba(0,0,0,0.95); text-align: center; border-radius: 0 0 10px 10px; padding-bottom: 10px; }
    .navbar-nav { flex-direction: column; }
    .navbar-nav .nav-link { color: #fff !important; padding: 12px 0; }
  }
</style>

