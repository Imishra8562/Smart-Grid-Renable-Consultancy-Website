@{
    ViewBag.Title = "Sustainability";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- ====== Page Title Section ====== -->
<section class="page-title" style="position:relative; background-image:url('@Url.Content("~/Content/images/background/8.jpg")'); background-size:cover; background-position:center;">
    <div class="auto-container">
        <div class="content text-white py-5" data-aos="fade-down">
            <h1 class="display-5 fw-bold">Sustain<span class="text-warning">ability</span></h1>
            <ul class="page-breadcrumb list-inline mt-3">
                <li class="list-inline-item">
                    <a href="@Url.Action("Index","Home")" class="text-white text-decoration-none">Home</a>
                </li>
                <li class="list-inline-item text-white">Sustainability</li>
            </ul>
        </div>
    </div>
</section>

<!-- ENVIRONMENT -->
<section class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-4  fw-bold">Environment</h2>
        <div class="row align-items-center">
            <div class="col-md-6 mb-4 mb-md-0">
                <img src="https://images.unsplash.com/photo-1501004318641-b39e6451bec6" alt="Environment" class="img-fluid rounded-4 shadow-sm">
            </div>
            <div class="col-md-6">
                <p>
                    SGRC is committed to reducing greenhouse gas emissions, enhancing energy efficiency,
                    and adopting renewable energy across all operations. We continually innovate to minimize
                    environmental impact and promote sustainable energy transition worldwide.
                </p>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item border-0">✔ 100% renewable energy target by 2030</li>
                    <li class="list-group-item border-0">✔ Waste reduction and water conservation programs</li>
                    <li class="list-group-item border-0">✔ Carbon-neutral office operations</li>
                </ul>
            </div>
        </div>
    </div>
</section>

<!-- SOCIAL -->
<section class="py-5 bg-white">
    <div class="container">
        <h2 class="text-center mb-4  fw-bold">Social</h2>
        <div class="row align-items-center">
            <div class="col-md-6 order-md-2 mb-4 mb-md-0">
                <img src="~/Content/images/About/Social.png" alt="Social Responsibility" class="img-fluid rounded-4 shadow-sm">
            </div>
            <div class="col-md-6 order-md-1">
                <p>
                    We empower communities through education, inclusion, and opportunities. SGRC invests in
                    skill development, workplace diversity, and safety programs to foster collaboration and growth.
                </p>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item border-0">✔ Community outreach & STEM education programs</li>
                    <li class="list-group-item border-0">✔ Diversity and inclusion across all levels</li>
                    <li class="list-group-item border-0">✔ Employee well-being and development initiatives</li>
                </ul>
            </div>
        </div>
    </div>
</section>

<!-- GOVERNANCE -->
<section class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-4  fw-bold">Governance</h2>
        <div class="row align-items-center">
            <div class="col-md-6 mb-4 mb-md-0">
                <img src="https://images.unsplash.com/photo-1554224155-8d04cb21cd6c" alt="Governance" class="img-fluid rounded-4 shadow-sm">
            </div>
            <div class="col-md-6">
                <p>
                    SGRC upholds transparency, accountability, and ethical decision-making as fundamental principles.
                    Our governance framework ensures sustainability goals are embedded into every business process.
                </p>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item border-0">✔ Transparent corporate reporting</li>
                    <li class="list-group-item border-0">✔ Ethical supply chain management</li>
                    <li class="list-group-item border-0">✔ Board-level ESG oversight</li>
                </ul>
            </div>
        </div>
    </div>
</section>

<!-- REPORT CTA -->
<section class="py-5 text-white text-center" style="background: linear-gradient(to right, #002D62, #0056A6);">
    <div class="container">
        <h2 class="mb-4 fw-bold ">Sustainability Report</h2>
        <p class="mb-4">
            Explore our latest report to learn about SGRC’s measurable impact on the environment,
            society, and governance. Transparency drives our commitment to a sustainable future.
        </p>
        <a href="#" class="btn btn-danger btn-lg">Download Report</a>
    </div>
</section>
