
@{
    ViewBag.Title = "Newsroom";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Header -->
<section class="py-5 text-center bg-dark text-white">
    <div class="container">
        <h1 class="fw-bold">Newsroom</h1>
        <p class="lead mb-0">Stay updated with the latest insights, achievements, and announcements from SGRC.</p>
    </div>
</section>

<!-- Featured News -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row align-items-center g-4">
            <div class="col-lg-6">
                <img src="~/images/newsroom/featured.jpg" alt="Featured News" class="img-fluid rounded shadow">
            </div>
            <div class="col-lg-6">
                <h2 class="fw-bold mb-3">SGRC Leads Innovation in Power Systems & Energy Transition</h2>
                <p>
                    SGRC Consulting Services continues to lead advancements in Power System Studies, Data Centers, and
                    Cybersecurity, leveraging advanced tools like PSS/E, DigSILENT PowerFactory, and PSCAD. Our experts
                    contribute to shaping the future of sustainable energy and infrastructure globally.
                </p>
                <a href="#" class="btn btn-primary mt-2">Read Full Story</a>
            </div>
        </div>
    </div>
</section>

<!-- News Cards Grid -->
<section class="py-5">
    <div class="container">
        <h3 class="fw-bold mb-4 text-center">Latest Updates</h3>
        <div class="row g-4">

            <!-- News Item 1 -->
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-sm">
                    <img src="~/images/newsroom/news1.jpg" class="card-img-top" alt="News 1">
                    <div class="card-body">
                        <h5 class="card-title">SGRC Expands Global Presence</h5>
                        <p class="card-text">
                            Our new offices in Europe and Asia strengthen our ability to deliver
                            energy solutions worldwide.
                        </p>
                        <a href="#" class="btn btn-outline-primary btn-sm">Read More</a>
                    </div>
                </div>
            </div>

            <!-- News Item 2 -->
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-sm">
                    <img src="~/images/newsroom/news2.jpg" class="card-img-top" alt="News 2">
                    <div class="card-body">
                        <h5 class="card-title">Webinar: Power Systems in the Digital Era</h5>
                        <p class="card-text">Join our global experts discussing the intersection of AI and grid reliability.</p>
                        <a href="#" class="btn btn-outline-primary btn-sm">Read More</a>
                    </div>
                </div>
            </div>

            <!-- News Item 3 -->
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-sm">
                    <img src="~/images/newsroom/news3.jpg" class="card-img-top" alt="News 3">
                    <div class="card-body">
                        <h5 class="card-title">SGRC Partners for EV Charging Infrastructure</h5>
                        <p class="card-text">We’re collaborating with utilities and city planners to enhance EV readiness.</p>
                        <a href="#" class="btn btn-outline-primary btn-sm">Read More</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="py-5 bg-primary text-white text-center">
    <div class="container">
        <h2 class="fw-bold">Want to Stay Updated?</h2>
        <p class="mb-4">Subscribe to receive SGRC news, project updates, and insights from our experts.</p>
        <form class="row justify-content-center g-2">
            <div class="col-md-4">
                <input type="email" class="form-control" placeholder="Enter your email" required>
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-light text-primary fw-bold">Subscribe</button>
            </div>
        </form>
    </div>
</section>

