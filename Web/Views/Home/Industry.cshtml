    <meta name="description" content="Explore the industries SGRC serves, including commercial & industrial, government, investment stakeholders, data centers, power delivery, power generation, and renewable energy integration. We deliver expert power system studies, grid analysis, and energy consultancy solutions." />

    <meta name="news_keywords" content="power system studies, energy consultancy, grid reliability, renewable integration, SGRC updates, engineering consulting, power audits, utility planning, power generation optimization">

    <meta name="standout" content="SGRC delivers industry-specific solutions in power systems, renewable energy, grid optimization, technical due-diligence, and high-availability energy infrastructure.">

    <!-- Open Graph -->
    <meta property="og:url" content="https://sgrc.co.in/industries-and-services" />
    <meta property="og:site_name" content="Smart Global Renewable & Consultancy (SGRC)" />
    <meta property="og:image" content="https://sgrc.co.in/Upload/Index/IndexSeoImage/ISC-9429814_1.png" />
    <meta property="og:image:url" content="https://sgrc.co.in/Upload/Index/IndexSeoImage/ISC-9429814_1.png" />
