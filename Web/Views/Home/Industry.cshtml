<section class="page-title" style="position:relative; background-image:url('@Url.Content("~/Content/images/background/8.jpg")'); background-size:cover; background-position:center;">

    <!-- Overlay -->
    @*<div style="position:absolute; top:0; left:0; width:100%; height:100%; background-color: rgba(0,0,0,0.5); z-index:1;"></div>*@

    <div class="auto-container" style="position:relative; z-index:2;">
        <div class="content text-white py-5" data-aos="fade-down">
            <h1 class="display-5 fw-bold">Industries  <span class="text-warning">We Serve</span></h1>
            <ul class="page-breadcrumb list-inline mt-3">
                <li class="list-inline-item">
                    <a href="@Url.Action("Index","Home")" class="text-white text-decoration-none">Home</a>
                </li>
                <li class="list-inline-item text-white">Industries</li>
            </ul>
        </div>
    </div>
</section>
<!-- CARD Industries We Services -->
<section class="portal-types py-5" style="background-color: #f2f2f2;">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold text-dark display-6">Industries & Services We Provide</h2>
            <p class="text-muted mt-3 mx-auto lead" style="max-width: 720px;">
                Each solution is designed to optimize operations, efficiency, and decision-making for your business or organization.
            </p>
        </div>

        <div class="row g-4">

            @if (Model.List_Industries_Obj != null && Model.List_Industries_Obj.Count > 0)
            {
                foreach (var item in Model.List_Industries_Obj)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="p-4 text-center bg-white border-0 shadow rounded-4 h-100 transition-all hover-shadow">

                            <!-- Title from DB -->
                            <h5 class="fw-bold text-dark mb-3">
                                @item.Industries_Name
                            </h5>

                            <!-- Description from DB -->
                            <p class="text-muted small mb-0">
                                @item.Industries_Page_Title
                            </p>

                            <!-- INDUSTRY IMAGE -->
                            @if (!string.IsNullOrEmpty(item.Industries_Image))
                            {
                                <div class="mt-3">
                                    <img src="@Url.Content(item.Industries_Image)"
                                         class="img-fluid rounded"
                                         style="max-height:130px; object-fit:cover;"
                                         alt="@item.Industries_Image_Alt_Tag" />
                                </div>
                            }

                            <!-- PAGE URL BUTTON -->
                            <div class="mt-3">
                                <a href="@Url.Action("IndustriesDetail", "Home", new { industries = item.Industries_Url_Link })"
                                   class="btn btn-warning btn-sm rounded-pill px-4">
                                    View More
                                </a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>


