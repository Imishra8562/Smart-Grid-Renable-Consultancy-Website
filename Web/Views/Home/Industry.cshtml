    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="630">

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="https://sgrc.co.in/industries-and-services" />
    <meta property="twitter:title" content="Industries & Services We Provide | SGRC">
