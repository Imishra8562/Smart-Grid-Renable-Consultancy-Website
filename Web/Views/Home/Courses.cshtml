
@{
    ViewBag.Title = "Courses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- ====== Page Title Section ====== -->
<section class="page-title" style="background-image:url('~/Content/images/background/8.jpg'); background-size:cover; background-position:center;">
    <div class="auto-container">
        <div class="content text-white py-5" data-aos="fade-down">
            <h1 class="display-5 fw-bold">Our <span class="text-danger">Courses</span></h1>
            <ul class="page-breadcrumb list-inline mt-3">
                <li class="list-inline-item">
                    <a href="@Url.Action("Index","Home")" class="text-white text-decoration-none">Home</a>
                </li>
                <li class="list-inline-item text-white">Courses</li>
            </ul>
        </div>
    </div>
</section>

<!-- ====== Overview ====== -->
<section class="py-5 bg-light text-center">
    <div class="container">
        <h2 class="fw-bold text-danger mb-4">Empowering Engineers through Knowledge</h2>
        <p class="mx-auto text-muted" style="max-width:800px;">
            SGRC offers comprehensive courses designed to bridge the gap between theory and practice.
            Our programs help professionals master tools, technologies, and concepts driving the energy sector forward.
        </p>
    </div>
</section>

<!-- ====== Course Categories ====== -->
<section class="py-5">
    <div class="container">
        <h2 class="text-center fw-bold text-danger mb-5">Popular Courses</h2>
        <div class="row g-4">

            <!-- Course 1 -->
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100">
                    <img src="https://images.unsplash.com/photo-1603791452906-b65ce30db2c1" class="card-img-top" alt="Power System Analysis">
                    <div class="card-body">
                        <h5 class="fw-bold text-dark">Power System Analysis</h5>
                        <p class="text-muted">
                            Learn load flow, short circuit, and transient stability analysis using PSS®E and ETAP software.
                        </p>
                    </div>
                    <div class="card-footer bg-transparent border-0 text-end">
                        <a href="/Contact" class="text-danger text-decoration-none fw-semibold">Learn More →</a>
                    </div>
                </div>
            </div>

            <!-- Course 2 -->
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100">
                    <img src="https://images.unsplash.com/photo-1555949963-aa79dcee981c" class="card-img-top" alt="Renewable Energy Systems">
                    <div class="card-body">
                        <h5 class="fw-bold text-dark">Renewable Energy Systems</h5>
                        <p class="text-muted">
                            Understand solar, wind, and hybrid systems integration into existing grid infrastructure.
                        </p>
                    </div>
                    <div class="card-footer bg-transparent border-0 text-end">
                        <a href="/Contact" class="text-danger text-decoration-none fw-semibold">Learn More →</a>
                    </div>
                </div>
            </div>

            <!-- Course 3 -->
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100">
                    <img src="https://images.unsplash.com/photo-1504384308090-c894fdcc538d" class="card-img-top" alt="Smart Grid Technologies">
                    <div class="card-body">
                        <h5 class="fw-bold text-dark">Smart Grid Technologies</h5>
                        <p class="text-muted">
                            Explore automation, communication, and cybersecurity applications in modern power grids.
                        </p>
                    </div>
                    <div class="card-footer bg-transparent border-0 text-end">
                        <a href="/Contact" class="text-danger text-decoration-none fw-semibold">Learn More →</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

<!-- ====== Specializations ====== -->
<section class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center fw-bold text-danger mb-4">Specialized Learning Tracks</h2>
        <div class="row g-4 text-center">
            <div class="col-md-3 col-sm-6">
                <div class="p-4 bg-white border rounded-4 shadow-sm h-100">
                    <h5 class="fw-bold text-dark">Power System Studies</h5>
                    <p class="text-muted">Advanced analysis using simulation tools for reliable grid operations.</p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="p-4 bg-white border rounded-4 shadow-sm h-100">
                    <h5 class="fw-bold text-dark">Smart Energy</h5>
                    <p class="text-muted">AI and IoT-based applications for smart and sustainable power systems.</p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="p-4 bg-white border rounded-4 shadow-sm h-100">
                    <h5 class="fw-bold text-dark">Renewable Integration</h5>
                    <p class="text-muted">Grid integration techniques for solar, wind, and hybrid microgrids.</p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="p-4 bg-white border rounded-4 shadow-sm h-100">
                    <h5 class="fw-bold text-dark">Cybersecurity</h5>
                    <p class="text-muted">Learn to protect digital energy systems from cyber threats.</p>
                </div>
            </div>
        </div>
    </div>
</section>
