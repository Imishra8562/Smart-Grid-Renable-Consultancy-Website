@model Web.Areas.Admin.Model.AdminModel
@{
    ViewBag.Title = "IndustriesDetail";
}

@section HeadContent {
    <meta name="description" content="@Model.Industries_Obj.Industries_Meta_Description" />
    <meta name="keywords" content="@Model.Industries_Obj.Industries_Meta_Keyword" />
    <meta name="author" content="SGRC" />

    <!-- OG Tags -->
    <meta property="og:title" content="@Model.Industries_Obj.Industries_Name" />
    <meta property="og:description" content="@Model.Industries_Obj.Industries_Page_Title" />
    <meta property="og:image" content="@Url.Content(Model.Industries_Obj.Industries_Image)" />
    <meta property="og:type" content="website" />
}

<!-- ====== Page Header / Banner ====== -->
<section class="page-title" style="position: relative;  background-image: url('../../Content/images/background/8.jpg'); background-size: cover; background-position: center; background-repeat: no-repeat;">
    <div class="auto-container py-5">
        <div class="content text-white" data-aos="fade-down">
            <h1 class="display-5 fw-bold">@Model.Industries_Obj.Industries_Name</h1>
            <p class="lead mt-3">@Model.Industries_Obj.Industries_Page_Title</p>
        </div>
    </div>
</section>
<!-- ===== Main Layout ===== -->
<section class="py-5 bg-white">
    <div class="container">
        <div class="row g-4">

            <!-- LEFT SIDEBAR -->
            <aside class="col-lg-3">
                <div class="border rounded p-4">
                    <h6 class="fw-bold text-uppercase mb-3 border-bottom pb-2">
                        Industries
                    </h6>

                    <ul class="list-unstyled mb-0">
                        @foreach (var item in Model.List_Industries_Obj)
                        {
                            <li class="mb-2">
                                <a href="@Url.Action("IndustriesDetail","Home", new { industries = item.Industries_Url_Link })"
                                   class="d-flex justify-content-between align-items-center text-decoration-none @(item.Industries_Id == Model.Industries_Obj.Industries_Id? "fw-semibold text-warning": "text-dark")">
                                    <span>@item.Industries_Name</span>
                                    <i class="bi bi-chevron-right small"></i>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </aside>

            <!-- CENTER CONTENT -->
            <main class="col-lg-6">
                <h4 class="fw-semibold mb-3">
                    @Model.Industries_Obj.Industries_Page_Title
                </h4>

                <div class="text-muted lh-lg">
                    @Html.Raw(Model.Industries_Obj.Industries_Description)
                </div>

                <div class="mt-4">
                    <a href="@Url.Action("KnowledgeBase","Home")" class="fw-semibold text-warning text-decoration-none"> Browse our Knowledge Directory →
                    </a>
                </div>

                <p class="small mt-3 text-muted">
                    For further assistance, contact us at
                    <a href="mailto:engineering@sgrc.co.in">engineering@sgrc.co.in</a>
                </p>
            </main>

            <!-- RIGHT SIDEBAR -->
            <aside class="col-lg-3 d-none d-lg-block">
                <div class="mb-4 text-center">
                    <img src="@Url.Content(Model.Industries_Obj.Industries_Image)" alt="@Model.Industries_Obj.Industries_Image_Alt_Tag" class="img-fluid rounded border">
                </div>

                <div class="mb-4">
                    <h6 class="fw-bold text-uppercase border-bottom pb-2">
                        Knowledge Base
                    </h6>
                    <p class="small text-muted mt-2">
                        A support repository with hundreds of technical insights.
                    </p>
                </div>

                <div>
                    <h6 class="fw-bold text-uppercase border-bottom pb-2">
                        Training
                    </h6>
                    <p class="small text-muted mt-2">
                        Professional courses designed to enhance expertise.
                    </p>
                </div>
            </aside>

        </div>
    </div>
</section>
