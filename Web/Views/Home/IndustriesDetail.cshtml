@model Web.Areas.Admin.Model.AdminModel
@using Newtonsoft.Json;
@{
    ViewBag.Title = "IndustriesDetail";
}

@section HeadContent {
    <title>@Model.Industries_Obj.Industries_Page_Title</title>

    <meta name="keywords" content="@Model.Industries_Obj.Industries_Meta_Keyword" />
    <meta name="description" content="@Model.Industries_Obj.Industries_Meta_Description" />
    <meta name="author" content="Smart Grid Renewable Consultancy" />
    <meta name="robots" content="index, follow" />

    <meta name="news_keywords" content="@Model.Industries_Obj.Industries_News_Keyword" />
    <meta name="standout" content="@Model.Industries_Obj.Industries_Meta_Description" />

    <!-- ================= CANONICAL ================= -->
    <link rel="canonical" href="https://smartgridrenewable.com/@Model.Industries_Obj.Industries_Url_Link" />

    <!-- ================= OPEN GRAPH ================= -->
    <meta property="og:type" content="article" />
    <meta property="og:site_name" content="Smart Grid Renewable Consultancy" />

    <meta property="og:url" content="https://smartgridrenewable.com/@Model.Industries_Obj.Industries_Url_Link" />
    <meta property="og:title" content="@Model.Industries_Obj.Industries_Og_Title" />
    <meta property="og:description" content="@Model.Industries_Obj.Industries_Og_Description" />

    <meta property="og:image" content="https://smartgridrenewable.com/Content/assets/images/@Model.Industries_Obj.Industries_Og_Image" />
    <meta property="og:image:url" content="https://smartgridrenewable.com/Content/assets/images/@Model.Industries_Obj.Industries_Og_Image" />
    <meta property="og:image:secure_url" content="https://smartgridrenewable.com/Content/assets/images/@Model.Industries_Obj.Industries_Og_Image" />

    <meta property="og:image:alt" content="@Model.Industries_Obj.Industries_Image_Alt_Tag" />
    <meta property="og:image:type" content="image/jpeg" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />

    <meta property="og:see_also" content="https://smartgridrenewable.com/engineering-servies" />
    <meta property="og:see_also" content="https://smartgridrenewable.com/contact" />

    <!-- ================= TWITTER ================= -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content="https://smartgridrenewable.com/@Model.Industries_Obj.Industries_Url_Link" />

    <meta name="twitter:title" content="@Model.Industries_Obj.Industries_Og_Title" />
    <meta name="twitter:description" content="@Model.Industries_Obj.Industries_Og_Description" />
    <meta name="twitter:image" content="https://smartgridrenewable.com/Content/assets/images/@Model.Industries_Obj.Industries_Og_Image" />

    <meta name="twitter:image:width" content="1200" />
    <meta name="twitter:image:height" content="630" />



    <!-- ===== JSON-LD : INDUSTRIES PAGE ===== -->
    <script type="application/ld+json">
    {
      "@@context": "https://schema.org",
      "@@type": "WebPage",
      "name": "@Model.Industries_Obj.Industries_Name",
      "description": "@Model.Industries_Obj.Industries_Meta_Description",
      "url": "@(Request.Url.Scheme + "://" + Request.Url.Authority + "/industries/" + Model.Industries_Obj.Industries_Url_Link)",
      "publisher": {
        "@@type": "Organization",
        "name": "SGRC - Smart Global Renewable & Consultancy",
        "logo": {
          "@@type": "ImageObject",
          "url": "@(Request.Url.Scheme + "://" + Request.Url.Authority + "/Content/images/logo.png")"
        }
      }
    }
    </script>

    <!-- ===== JSON-LD : BREADCRUMB ===== -->
    <script type="application/ld+json">
    {
      "@@context": "https://schema.org",
      "@@type": "BreadcrumbList",
      "itemListElement": [
        {
          "@@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": "@(Request.Url.Scheme + "://" + Request.Url.Authority)"
        },
        {
          "@@type": "ListItem",
          "position": 2,
          "name": "Industries",
          "item": "@(Request.Url.Scheme + "://" + Request.Url.Authority + "/industries")"
        },
        {
          "@@type": "ListItem",
          "position": 3,
          "name": "@Model.Industries_Obj.Industries_Name",
          "item": "@(Request.Url.Scheme + "://" + Request.Url.Authority + "/industries/" + Model.Industries_Obj.Industries_Url_Link)"
        }
      ]
    }
    </script>
}


