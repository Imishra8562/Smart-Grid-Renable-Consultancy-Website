<section class="page-title" style="position:relative; background-image:url('@Url.Content("~/Content/images/background/8.jpg")'); background-size:cover; background-position:center;">

    <div class="auto-container">
        <div class="content text-white py-5" data-aos="fade-down">
            <h1 class="display-5 fw-bold">
                @Model.Industries_Obj.Industries_Name
            </h1>
            <ul class="page-breadcrumb list-inline mt-3">

                <li class="list-inline-item">
                    <a href="@Url.Action("Index","Home")" class="text-white text-decoration-none">Home</a>
                </li>
                <li class="list-inline-item text-white">Industries</li>
            </ul>
        </div>
    </div>
</section>
<!-- ================= CONTENT ================= -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row g-4">

            <!-- ===== LEFT SIDEBAR : KNOWLEDGE LIST ===== -->
            <div class="col-lg-3">

                <div class="card border-0 shadow-sm">
                    <div class="card-body p-3">

                        <h6 class="fw-bold mb-3 text-uppercase">
                            industries
                        </h6>

                        <div class="list-group list-group-flush small">
                            @if (Model.List_Industries_Obj != null && Model.List_Industries_Obj.Any())
                            {
                                foreach (var item in Model.List_Industries_Obj)
                                {
                                    bool isActive = Model.Industries_Obj.Industries_Id == item.Industries_Id;

                                    <a href="@Url.Action("IndustriesDetail", "Home",new { industries = item.Industries_Url_Link })" class="list-group-item list-group-item-action @(isActive ? "active bg-warning text-dark fw-semibold border-0" : "")">
                                        @item.Industries_Name
                                    </a>
                                }
                            }
                        </div>

                    </div>
                </div>

            </div>

            <!-- ===== CENTER CONTENT ===== -->
            <div class="col-lg-6">

                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4">

                        <span class="badge bg-warning text-dark mb-3">
                            Expert Insight
                        </span>

                        <h2 class="fw-bold mb-4">
                            @Model.Industries_Obj.Industries_Page_Title
                        </h2>

                        <div class="text-muted lh-lg">
                            @Html.Raw(Model.Industries_Obj.Industries_Description)
                        </div>

                    </div>
                </div>

            </div>
            <!-- ===== RIGHT IMAGE  other page Link ===== -->
            <div class="col-lg-3">

                <div class="sticky-top" style="top:100px;">

                    <!-- Image -->
                    <img src="@Url.Content(Model.Industries_Obj.Industries_Image)" class="img-fluid rounded mb-4" alt="@Model.Industries_Obj.Industries_Image_Alt_Tag" />

                    <!-- engineering-services -->
                    <a href="@Url.Action("EngineeringServicesDetails", "Home", new { url = "power-system-studies" })"
                       class="d-flex align-items-start gap-3 py-3 border-top text-decoration-none text-dark">

                        <div class="icon-circle">
                            <i class="fas fa-cogs"></i>
                        </div>

                        <div>
                            <h6 class="mb-1 fw-semibold text-uppercase">Engineering Services</h6>
                            <p class="mb-0 small text-muted">
                                Expert engineering solutions including power system studies, design analysis,
                                testing, and technical consultancy services.
                            </p>
                        </div>
                    </a>

                    <!-- knowledge-base-->
                    <a href="@Url.Action("KnowledgeBaseDetails", "Home", new { url = "battery-and-charger" })"
                       class="d-flex align-items-start gap-3 py-3 border-top text-decoration-none text-dark">

                        <div class="icon-circle">
                            <i class="fas fa-book-open"></i>
                        </div>

                        <div>
                            <h6 class="mb-1 fw-semibold text-uppercase">Knowledge Base</h6>
                            <p class="mb-0 small text-muted">
                                Explore technical articles, engineering insights, documentation, and best practices
                                to support informed decisions and project success.
                            </p>
                        </div>

                    </a>
                    <!-- Training -->
                    <a href="@Url.Action("Training", "Home")"
                       class="d-flex align-items-start gap-3 py-3 border-top text-decoration-none text-dark">

                        <div class="icon-circle">
                            <i class="fas fa-user-graduate"></i>
                        </div>

                        <div>
                            <h6 class="mb-1 fw-semibold text-uppercase">Training</h6>
                            <p class="mb-0 small text-muted">
                                Professional training programs to enhance skills and technical expertise.
                            </p>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
