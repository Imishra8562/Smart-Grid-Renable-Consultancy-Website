@{
    ViewBag.Title = "InvestorRelations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- ====== Page Title Section ====== -->
<section class="page-title" style="background-image:url('~/Content/images/background/8.jpg'); background-size:cover; background-position:center;">
    <div class="auto-container">
        <div class="content text-white py-5" data-aos="fade-down">
            <h1 class="display-5 fw-bold">Investor <span class="text-danger">Relations</span></h1>
            <ul class="page-breadcrumb list-inline mt-3">
                <li class="list-inline-item">
                    <a href="@Url.Action("Index","Home")" class="text-white text-decoration-none">Home</a>
                </li>
                <li class="list-inline-item text-white">Investor Relations</li>
            </ul>
        </div>
    </div>
</section>
<!-- OVERVIEW -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row align-items-center g-4">
            <div class="col-lg-6">
                <img src="~/images/investor/overview.jpg" class="img-fluid rounded shadow" alt="Investor Relations Overview">
            </div>
            <div class="col-lg-6">
                <h2 class="fw-bold text-danger mb-3">Our Commitment to Investors</h2>
                <p>
                    SGRC is dedicated to maintaining transparent and timely communication with stakeholders.
                    Our Investor Relations program provides detailed insights into business strategy,
                    financial performance, and governance practices — ensuring long-term value creation.
                </p>
                <a href="#" class="btn btn-danger mt-3">Download Investor Presentation</a>
            </div>
        </div>
    </div>
</section>

<!-- INFO CARDS -->
<section class="py-5">
    <div class="container">
        <div class="row text-center g-4">
            <div class="col-md-4">
                <div class="p-4 border border-danger rounded-4 bg-white shadow-sm h-100">
                    <h4 class="fw-bold text-danger mb-3">Financial Information</h4>
                    <p>Access quarterly reports, annual statements, and performance highlights.</p>
                    <a href="#" class="btn btn-outline-danger btn-sm">View Reports</a>
                </div>
            </div>

            <div class="col-md-4">
                <div class="p-4 border border-danger rounded-4 bg-white shadow-sm h-100">
                    <h4 class="fw-bold text-danger mb-3">Stock & Bond Data</h4>
                    <p>Stay updated on SGRC stock performance, dividends, and bond details.</p>
                    <a href="#" class="btn btn-outline-danger btn-sm">View Stock Info</a>
                </div>
            </div>

            <div class="col-md-4">
                <div class="p-4 border border-danger rounded-4 bg-white shadow-sm h-100">
                    <h4 class="fw-bold text-danger mb-3">IR Materials & News</h4>
                    <p>Browse investor presentations, press releases, and recent announcements.</p>
                    <a href="#" class="btn btn-outline-danger btn-sm">Explore IR News</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- ESG SECTION -->
<section class="py-5 bg-light">
    <div class="container">
        <h3 class="fw-bold text-center text-danger mb-4">Environmental, Social & Governance (ESG)</h3>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <h5 class="fw-bold text-danger">Environment</h5>
                        <p>We are committed to reducing emissions, enhancing energy efficiency, and advancing clean-energy integration.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <h5 class="fw-bold text-danger">Social Responsibility</h5>
                        <p>SGRC promotes inclusivity, education, and community engagement through social and technical initiatives.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <h5 class="fw-bold text-danger">Governance</h5>
                        <p>Our governance ensures accountability, ethics, and compliance across all operations.</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center mt-5">
            <a href="#" class="btn btn-danger">Download Sustainability Report</a>
        </div>
    </div>
</section>
