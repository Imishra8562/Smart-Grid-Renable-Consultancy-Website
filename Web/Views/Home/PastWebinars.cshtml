@{
    ViewBag.Title = "PastWebinars";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- ====== Page Title Section ====== -->
<section class="page-title" style="position:relative; background-image:url('@Url.Content("~/Content/images/background/8.jpg")'); background-size:cover; background-position:center;">
    <div class="auto-container">
        <div class="content text-white py-5" data-aos="fade-down">
            <h1 class="display-5 fw-bold">Past <span class="text-warning">Webinars</span></h1>
            <ul class="page-breadcrumb list-inline mt-3">
                <li class="list-inline-item">
                    <a href="@Url.Action("Index","Home")" class="text-white text-decoration-none">Home</a>
                </li>
                <li class="list-inline-item text-white">Past Webinars</li>
            </ul>
        </div>
    </div>
</section>

<!-- ====== Intro Section ====== -->
<section class="py-5 bg-light text-center">
    <div class="container">
        <h2 class="fw-bold  mb-4">Explore Our Knowledge Archive</h2>
        <p class="mx-auto text-muted" style="max-width:800px;">
            Revisit our insightful webinars where SGRC experts and industry leaders discuss
            the latest innovations, research, and technologies shaping the global power and energy sectors.
        </p>
    </div>
</section>

