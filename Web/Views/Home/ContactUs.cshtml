<!-- ====== Page Title Section ====== -->
<section class="page-title" style="position:relative; background-image:url('@Url.Content("~/Content/images/background/8.jpg")'); background-size:cover; background-position:center;">
    <div class="auto-container">
        <div class="content text-white py-5" data-aos="fade-down">
            <h1 class="display-5 fw-bold">Contact<span class="text-warning">-Us</span></h1>
            <ul class="page-breadcrumb list-inline mt-3">
                <li class="list-inline-item">
                    <a href="@Url.Action("Index","Home")" class="text-white text-decoration-none">Home</a>
                </li>
                <li class="list-inline-item text-white">Careers</li>
            </ul>
        </div>
    </div>
</section>

<!-- End Page Title -->
<!-- Contact Page Section -->
<section class="contact-page-section">
    <div class="map-section">
        <div class="map-outer">
            <div class="map-canvas"
                 data-zoom="12"
                 data-lat="28.6139"
                 data-lng="77.2090"
                 data-type="roadmap"
                 data-hue="#004aad"
                 data-title="SGRC HQ"
                 data-icon-path="/images/icons/map-marker.png"
                 data-content="New Delhi, India<br><a href='mailto:info@sgrc.co.in'>info@sgrc.co.in</a>">
            </div>
        </div>
    </div>

    <div class="auto-container">
        <div class="inner-container">
            <h2>We’d love to hear from you — <br> Connect with <span>SGRC Consulting</span></h2>
            <div class="row clearfix">

                <!-- Info Column -->
                <div class="info-column col-lg-7 col-md-12 col-sm-12">
                    <div class="inner-column">
                        <div class="text">
                            Please contact us using the details below. For additional information on our power system consulting services, or to discuss your project requirements, get in touch with our global offices or local agents.
                        </div>
                        <ul class="list-style-five">
                            <li><span class="icon fa fa-building"></span> SGRC Consulting Services Pvt. Ltd.<br> A-105, Energy Park, New Delhi, India</li>
                            <li><span class="icon fa fa-phone"></span> +91 98765 43210</li>
                            <li><span class="icon fa fa-envelope-o"></span> info@sgrc.co.in</li>
                        </ul>
                    </div>
                </div>

                <!-- Form Column -->
                <div class="form-column col-lg-5 col-md-12 col-sm-12">
                    <div class="inner-column">
                        <div class="contact-form">
                            <form method="post" asp-action="SendContact" id="contact-form">
                                <div class="form-group">
                                    <input type="text" name="FullName" placeholder="Full Name" required>
                                </div>
                                <div class="form-group">
                                    <input type="email" name="Email" placeholder="Email Address" required>
                                </div>
                                <div class="form-group">
                                    <select class="custom-select-box" name="Topic">
                                        <option>Select Topic</option>
                                        <option>Power System Consulting</option>
                                        <option>Renewable Integration</option>
                                        <option>Cybersecurity Solutions</option>
                                        <option>Training & Workshops</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <textarea name="Message" placeholder="Write your message..." required></textarea>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="theme-btn">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

