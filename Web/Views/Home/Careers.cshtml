@{
    ViewBag.Title = "Careers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- ====== Page Title Section ====== -->
<section class="page-title" style="position:relative; background-image:url('@Url.Content("~/Content/images/background/8.jpg")'); background-size:cover; background-position:center;">
    <div class="auto-container">
        <div class="content text-white py-5" data-aos="fade-down">
            <h1 class="display-5 fw-bold">Join <span class="text-danger">Our Team</span></h1>
            <ul class="page-breadcrumb list-inline mt-3">
                <li class="list-inline-item">
                    <a href="@Url.Action("Index","Home")" class="text-white text-decoration-none">Home</a>
                </li>
                <li class="list-inline-item text-white">Careers</li>
            </ul>
        </div>
    </div>
</section>

<!-- ====== Work at SGRC ====== -->
<section class="py-5">
    <div class="container text-center">
        <div data-aos="fade-up">
            <h2 class="fw-bold mb-3">Work at <span class="text-primary">SGRC</span></h2>
            <p class="text-muted mx-auto" style="max-width:800px;">
                At SGRC, we believe our people are our greatest strength. Whether you're an engineer, analyst, or strategist,
                you'll be part of a mission-driven organization leading the way in renewable energy, grid modernization, and smart technologies.
            </p>
        </div>
    </div>
</section>

<!-- ====== Career Categories ====== -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5" data-aos="fade-up">
            <h2 class="fw-bold">Career Opportunities</h2>
            <p class="text-muted mb-0">Explore the departments where your skills can shine.</p>
        </div>

        <div class="row g-4">
            <!-- Category 1 -->
            <div class="col-md-6 col-lg-4" data-aos="fade-up">
                <div class="card border-0 shadow-sm h-100">
                    <img src="https://via.placeholder.com/400x250?text=Project+Management" class="card-img-top" alt="Project Management">
                    <div class="card-body">
                        <h5 class="fw-bold">Project & Program Management</h5>
                        <p class="text-muted">Lead power system and infrastructure projects ensuring world-class delivery and innovation.</p>
                    </div>
                </div>
            </div>

            <!-- Category 2 -->
            <div class="col-md-6 col-lg-4" data-aos="fade-up" data-aos-delay="100">
                <div class="card border-0 shadow-sm h-100">
                    <img src="https://via.placeholder.com/400x250?text=Engineering+%26+Science" class="card-img-top" alt="Engineering & Science">
                    <div class="card-body">
                        <h5 class="fw-bold">Engineering & Science</h5>
                        <p class="text-muted">Contribute to pioneering research in power systems, renewable integration, and data analytics.</p>
                    </div>
                </div>
            </div>

            <!-- Category 3 -->
            <div class="col-md-6 col-lg-4" data-aos="fade-up" data-aos-delay="200">
                <div class="card border-0 shadow-sm h-100">
                    <img src="https://via.placeholder.com/400x250?text=Sales+%26+Marketing" class="card-img-top" alt="Sales & Marketing">
                    <div class="card-body">
                        <h5 class="fw-bold">Sales, Marketing & Product Management</h5>
                        <p class="text-muted">Promote SGRC’s innovative portfolio through strategic marketing and customer engagement.</p>
                    </div>
                </div>
            </div>

            <!-- Category 4 -->
            <div class="col-md-6 col-lg-4" data-aos="fade-up">
                <div class="card border-0 shadow-sm h-100">
                    <img src="https://via.placeholder.com/400x250?text=Finance" class="card-img-top" alt="Finance">
                    <div class="card-body">
                        <h5 class="fw-bold">Finance</h5>
                        <p class="text-muted">Drive financial planning and investment strategies supporting SGRC’s global growth.</p>
                    </div>
                </div>
            </div>

            <!-- Category 5 -->
            <div class="col-md-6 col-lg-4" data-aos="fade-up" data-aos-delay="100">
                <div class="card border-0 shadow-sm h-100">
                    <img src="https://via.placeholder.com/400x250?text=IT+%26+Telecom" class="card-img-top" alt="IT and Telecom">
                    <div class="card-body">
                        <h5 class="fw-bold">IT, Telecom & Internet</h5>
                        <p class="text-muted">Power the digital transformation at SGRC with cybersecurity, AI, and smart network solutions.</p>
                    </div>
                </div>
            </div>

            <!-- Category 6 -->
            <div class="col-md-6 col-lg-4" data-aos="fade-up" data-aos-delay="200">
                <div class="card border-0 shadow-sm h-100">
                    <img src="https://via.placeholder.com/400x250?text=Production+%26+Trades" class="card-img-top" alt="Production">
                    <div class="card-body">
                        <h5 class="fw-bold">Production & Skilled Trades</h5>
                        <p class="text-muted">Apply expertise in power equipment, renewable installations, and energy manufacturing.</p>
                    </div>
                </div>
            </div>

            <!-- Category 7 -->
            <div class="col-md-6 col-lg-4" data-aos="fade-up">
                <div class="card border-0 shadow-sm h-100">
                    <img src="https://via.placeholder.com/400x250?text=Supply+Chain" class="card-img-top" alt="Supply Chain">
                    <div class="card-body">
                        <h5 class="fw-bold">Supply Chain</h5>
                        <p class="text-muted">Manage logistics, procurement, and sustainability of materials across global operations.</p>
                    </div>
                </div>
            </div>

            <!-- Category 8 -->
            <div class="col-md-6 col-lg-4" data-aos="fade-up" data-aos-delay="100">
                <div class="card border-0 shadow-sm h-100">
                    <img src="https://via.placeholder.com/400x250?text=Administration+%26+Facilities" class="card-img-top" alt="Administration">
                    <div class="card-body">
                        <h5 class="fw-bold">Administration & Facilities</h5>
                        <p class="text-muted">Support operations and manage resources across SGRC’s global network.</p>
                    </div>
                </div>
            </div>

            <!-- Category 9 -->
            <div class="col-md-6 col-lg-4" data-aos="fade-up" data-aos-delay="200">
                <div class="card border-0 shadow-sm h-100">
                    <img src="https://via.placeholder.com/400x250?text=Human+Resources" class="card-img-top" alt="Human Resources">
                    <div class="card-body">
                        <h5 class="fw-bold">Human Resources</h5>
                        <p class="text-muted">Drive talent growth, inclusion, and professional development at SGRC.</p>
                    </div>
                </div>
            </div>

            <!-- Category 10 -->
            <div class="col-md-6 col-lg-4" data-aos="fade-up" data-aos-delay="300">
                <div class="card border-0 shadow-sm h-100">
                    <img src="https://via.placeholder.com/400x250?text=Customer+Service" class="card-img-top" alt="Customer Service">
                    <div class="card-body">
                        <h5 class="fw-bold">Customer Service</h5>
                        <p class="text-muted">Deliver world-class support and ensure satisfaction for clients globally.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- ====== Call to Action ====== -->
<section class="py-5 text-white text-center" style="background: linear-gradient(to right, #002D62, #0056A6);">
    <div class="container">
        <h2 class="fw-bold mb-3">Build Your Future with SGRC</h2>
        <p class="lead mb-4">We’re always looking for passionate professionals ready to make a global impact.</p>
        <a href="@Url.Action("ContactUs","Home")" class="btn btn-light btn-lg px-4 fw-bold">Apply or Contact HR</a>
    </div>
</section>

@section Scripts {
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>AOS.init({ duration: 1000, once: true });</script>
}
