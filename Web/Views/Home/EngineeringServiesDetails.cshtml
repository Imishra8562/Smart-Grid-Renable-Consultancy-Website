@model Web.Areas.Admin.Model.MasterModel
@using Newtonsoft.Json;
@{
    ViewBag.Title = "EngineeringServiesDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .app-card {
        transition: all 0.3s ease;
    }

        .app-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 1rem 2rem rgba(0, 0, 0, 0.15);
        }
</style>

<!-- ====== Page Title Section (Updated Style) ====== -->
<section class="page-title" style="position:relative; background-image:url('@Url.Content("~/Content/images/background/8.jpg")'); background-size:cover; background-position:center;">

    <div class="auto-container">
        <div class="content text-white py-5" data-aos="fade-down">
            <h1 class="display-5 fw-bold">Power<span class="text-warning"> System Studies</span></h1>
            <ul class="page-breadcrumb list-inline mt-3">

                <li class="list-inline-item">
                    <a href="@Url.Action("Index","Home")" class="text-white text-decoration-none">
                        Engineering Services
                    </a>
                </li>
                <li class="list-inline-item text-white">Power System Studies</li>
            </ul>
        </div>
    </div>
</section>

<section class="my-5">
    <div class="container">
        <div class="row align-items-center p-4 p-md-5 rounded-5" style="background-color: #F0F6FF; border-radius: 30px;">

            <div class="col-12 col-md-7 d-flex flex-column justify-content-center text-center text-md-start">
                <h2 class="fw-bold text-dark display-6">
                    Do You Require a Detailed Power System Study?
                </h2>
                <p class="mt-3 fs-5 text-muted">
                    <strong>Our engineering team</strong> delivers accurate, standards-compliant analyses to ensure electrical system reliability and safety:
                </p>
                <ul class="list-unstyled fs-6">
                    <li class="mb-2">
                        <i class="bi bi-check-circle-fill text-info me-2"></i>
                        Comprehensive Load Flow, Short Circuit, Harmonic, and Stability Studies as per IEEE/IEC standards.
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-check-circle-fill text-info me-2"></i>
                        Identify faults, overloads, voltage drops, and protection issues before they impact operations.
                    </li>
                    <li class="mb-3">
                        <i class="bi bi-check-circle-fill text-info me-2"></i>
                        Optimize system performance and ensure safe, reliable, and efficient power distribution.
                    </li>
                </ul>
            </div>

            <div class="col-12 col-md-5 text-center d-flex justify-content-center align-items-center">
                <img src="~/Content/images/About/PowerSystem.png"
                     alt="Power System Studies"
                     class="img-fluid"
                     style="max-width: 400px; filter: drop-shadow(11px 12px 9px #000); border-radius: 12px;">
            </div>

        </div>
    </div>
</section>
<section class="my-5">
    <div class="container">
        <div class="row align-items-center p-4 p-md-5 rounded-5" style="background-color: #F0F6FF; border-radius: 30px;">

            <div class="col-12 col-md-7 d-flex flex-column justify-content-center text-center text-md-start">
                <h2 class="fw-bold text-dark display-6">
                    Do You Require a Detailed @Model.Engineering_Services_Tabs_Obj.Engineering_Services_Tabs_Title ?
                </h2>
                <p>
                    @Model.Engineering_Services_Tabs_Obj.Engineering_Services_Tabs_Content
                </p>
            </div>
            <div class="col-12 col-md-5 text-center d-flex justify-content-center align-items-center">
                <div class="col-12 col-md-5 text-center d-flex justify-content-center align-items-center">
                    <img src="@Url.Content(Model.Engineering_Services_Obj.Engineering_Services_Image)"
                         alt="Power System Studies"
                         class="img-fluid"
                         style="max-width: 400px; filter: drop-shadow(11px 12px 9px #000); border-radius: 12px;">
                </div>
            </div>

        </div>
    </div>
</section>

<section class="why-portal py-5" style="background-color: #f2f2f2;">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold text-dark">Features of Our Power System Study Services</h2>
            <p class="text-muted mt-3 mx-auto" style="max-width: 720px; font-size: 1rem;">
                Our power system studies are designed to enhance electrical reliability, improve safety, and optimize system performance. These analytical assessments help industries prevent failures, reduce downtime, and ensure compliance with global standards such as IEEE, IEC, and NEC.
            </p>
        </div>
        @if (Model.List_Engineering_Services_Features_Obj != null && Model.List_Engineering_Services_Features_Obj.Count > 0)
        {
            <div class="row g-4">
                @foreach (var item in Model.List_Engineering_Services_Features_Obj)
                {
                    <!-- Load Flow Study -->
                    <div class="col-md-6 col-lg-3">
                        <div class="text-center px-4 py-5 bg-white rounded-4 shadow-lg h-100 border-0" style="transition: all 0.3s ease;">
                            <!-- Icon -->
                            <div class="mb-3">
                                <span class="d-inline-flex align-items-center justify-content-center rounded-circle bg-primary bg-opacity-10 text-primary" style="width:60px; height:60px;">
                                    <i class="@item.Engineering_Services_Features_IconClass fs-4"></i>
                                </span>
                            </div>
                            <h5 class="fw-bold text-dark-emphasis" style="color: #000; font-weight: 800;">
                                @item.Engineering_Services_Features_Name
                            </h5>
                            <p class="text-muted small">
                                @item.Engineering_Services_Features_Description
                            </p>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</section>
<section class="py-5 bg-light" id="section7">
    <div class="container">

        <div class="text-center mb-5">
            <h2 class="fw-bold">Applications & Use Cases</h2>
            <p class="text-muted">Designed for diverse industrial, commercial, and utility environments</p>
        </div>
        @if (Model.List_Engineering_Services_Applications_Obj != null && Model.List_Engineering_Services_Applications_Obj.Count > 0)
        {
            <div class="row g-4">
                @foreach (var item in Model.List_Engineering_Services_Applications_Obj)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100 border-0 shadow-sm rounded-4 p-4 app-card">

                            <!-- Icon -->
                            <div class="mb-3">
                                <span class="d-inline-flex align-items-center justify-content-center rounded-circle bg-primary bg-opacity-10 text-primary" style="width:56px; height:56px;">
                                    <i class="@item.Engineering_Services_Applications_IconClass fs-4"></i>
                                </span>
                            </div>

                            <!-- Title -->
                            <h5 class="fw-bold text-dark mb-2">
                                @item.Engineering_Services_Applications_Name
                            </h5>

                            <!-- Description -->
                            <p class="text-muted small mb-0">
                                @item.Engineering_Services_Applications_Description
                            </p>

                        </div>
                    </div>
                }
            </div>
        }
    </div>
</section>
