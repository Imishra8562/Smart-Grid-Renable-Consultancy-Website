
@{
    ViewBag.Title = "PressReleases";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Page Header -->
<section class="py-5 text-center bg-dark text-white">
    <div class="container">
        <h1 class="fw-bold">Press Releases</h1>
        <p class="lead mb-0">Official announcements, partnerships, and corporate updates from SGRC.</p>
    </div>
</section>

<!-- Featured Release -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row align-items-center g-4">
            <div class="col-lg-6">
                <img src="~/images/press/featured.jpg" alt="Featured Press Release" class="img-fluid rounded shadow">
            </div>
            <div class="col-lg-6">
                <h2 class="fw-bold mb-3">SGRC Announces Global Initiative for Energy Resilience</h2>
                <p>
                    SGRC launches its international energy resilience program, collaborating with key utilities and
                    governments to enhance grid reliability and cybersecurity measures. The initiative aligns with
                    our mission to support the global #energytransition through innovation and data-driven solutions.
                </p>
                <p class="text-muted mb-1"><small><i class="bi bi-calendar"></i> October 25, 2025</small></p>
                <a href="#" class="btn btn-primary mt-2">Read Full Release</a>
            </div>
        </div>
    </div>
</section>

<!-- Press Releases List -->
<section class="py-5">
    <div class="container">
        <h3 class="fw-bold mb-4 text-center">Recent Press Releases</h3>
        <div class="list-group shadow-sm">

            <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-start">
                <div>
                    <h5 class="mb-1 fw-bold">SGRC Partners with Global Data Center Alliance</h5>
                    <p class="mb-1 text-muted">
                        New collaboration focuses on integrating energy-efficient designs and
                        smart grid technologies in data centers.
                    </p>
                </div>
                <small class="text-secondary">Sep 30 2025</small>
            </a>

            <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-start">
                <div>
                    <h5 class="mb-1 fw-bold">Launch of SGRC Electric Vehicle Charging Study</h5>
                    <p class="mb-1 text-muted">
                        Comprehensive study evaluates infrastructure readiness across multiple
                        metropolitan regions in Asia-Pacific.
                    </p>
                </div>
                <small class="text-secondary">Aug 12 2025</small>
            </a>

            <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-start">
                <div>
                    <h5 class="mb-1 fw-bold">SGRC Recognized for Excellence in Power System Studies</h5>
                    <p class="mb-1 text-muted">
                        Industry award honors SGRC’s expertise in reactive power planning and
                        transmission stability solutions.
                    </p>
                </div>
                <small class="text-secondary">Jul 5 2025</small>
            </a>

            <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-start">
                <div>
                    <h5 class="mb-1 fw-bold">New SGRC Cybersecurity Research Center Inaugurated</h5>
                    <p class="mb-1 text-muted">
                        The center will drive advanced simulations and grid defense strategies
                        using AI-based monitoring tools.
                    </p>
                </div>
                <small class="text-secondary">Jun 14 2025</small>
            </a>

        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="py-5 bg-primary text-white text-center">
    <div class="container">
        <h2 class="fw-bold">Media & Press Inquiries</h2>
        <p class="mb-4">For interviews, official statements, or detailed reports, please reach out to our communications team.</p>
        <a href="@Url.Action("ContactUs","Home")" class="btn btn-light text-primary fw-bold">Contact Communications Team</a>
    </div>
</section>
