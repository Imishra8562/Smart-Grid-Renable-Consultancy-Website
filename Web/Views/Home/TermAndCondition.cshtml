
<!-- ====== Page Title Section (Updated Style) ====== -->
<section class="page-title" style="position:relative; background-image:url('@Url.Content("~/Content/images/background/8.jpg")'); background-size:cover; background-position:center;">

    <div class="auto-container">
        <div class="content text-white py-5" data-aos="fade-down">
            <h1 class="display-5 fw-bold">Knowledge <span class="text-warning">Base</span></h1>
            <ul class="page-breadcrumb list-inline mt-3">

                <li class="list-inline-item">
                    <a href="@Url.Action("Index","Home")" class="text-white text-decoration-none">Home</a>
                </li>
                <li class="list-inline-item text-white">Knowledge Base</li>
            </ul>
        </div>
    </div>
</section>
<!-- End Page Title -->
<!-- Equipment Categories -->
<section class="py-5 bg-light">
    <div class="container">
        <h2 class="fw-bold text-center text-danger mb-4">Equipment Categories</h2>
        <div class="row g-4">

            @foreach (var item in new[]{
                "Motor (LV & MV)", "Cable (LV, MV & HV)", "Battery & Charger",
                "Capacitor (LV & MV)", "Circuit Breaker (LV, MV, HV)", "Generator",
                "Solar Inverters", "Starter", "Transformer", "Transmission Line"
            })
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <img src="https://via.placeholder.com/400x250?text=@item" class="card-img-top" alt="@item">
                        <div class="card-body">
                            <h5 class="fw-bold text-dark">@item</h5>
                            <p class="text-muted mb-0">
                                Comprehensive knowledge and testing procedures for @item systems, supporting design, commissioning, and maintenance.
                            </p>
                        </div>
                        <div class="card-footer bg-transparent border-0 text-end">
                            <a href="/Contact" class="text-danger text-decoration-none fw-semibold">Learn More →</a>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>

<!-- Power System Studies (RMS) -->
