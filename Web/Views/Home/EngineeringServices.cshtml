
@{
    ViewBag.Title = "EngineeringServices";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- ====== Page Title Section (Updated Style) ====== -->
<section class="page-title" style="background-image:url('~/Content/images/background/8.jpg'); background-size:cover; background-position:center;">

    <div class="auto-container">
        <div class="content text-white py-5" data-aos="fade-down">
            <h1 class="display-5 fw-bold">Engineering <span class="text-warning">Services</span></h1>
            <ul class="page-breadcrumb list-inline mt-3">

                <li class="list-inline-item">
                    <a href="@Url.Action("Index","Home")" class="text-white text-decoration-none">Home</a>
                </li>
                <li class="list-inline-item text-white">Engineering Services</li>
            </ul>
        </div>
    </div>
</section>
<!-- End Page Title -->

<div class="container my-5">
    <div class="text-center mb-5">
        @*<h1 class="fw-bold text-danger">Engineering Services</h1>*@
        <p class="text-muted">
            SGRC offers comprehensive engineering solutions supporting the planning, design, and operation of modern power systems.
            Our expertise spans power system studies, renewable integration, data centers, cybersecurity, and AI-driven applications for the energy transition.
        </p>
    </div>

    <!-- Overview -->
    <div class="mb-5">
        <h3 class="fw-semibold text-dark border-bottom border-danger pb-2">Overview</h3>
        <p class="text-muted">
            SGRC’s Engineering Services team provides end-to-end solutions to utilities, industries, and infrastructure developers worldwide.
            Our professionals leverage deep technical knowledge and advanced analytical tools to ensure safe, reliable, and efficient power system operations.
        </p>
    </div>

    <!-- Services Cards -->
    <div class="row g-4">
        @foreach (var service in new[] {
            new { Title = "Power System Studies", Text = "Comprehensive load flow, short-circuit, and stability studies to ensure optimal grid performance." },
            new { Title = "HVDC & FACTS", Text = "Design, modeling, and analysis of HVDC systems and flexible AC transmission solutions." },
            new { Title = "Renewable Energy Integration", Text = "Stable grid integration of solar, wind, and hybrid renewable energy systems." },
            new { Title = "Electromagnetic Transient Studies", Text = "Detailed EMT analysis for insulation coordination, resonance, and switching transients." },
            new { Title = "Power System Equipment Services", Text = "Performance testing and diagnostics for transformers, motors, and circuit breakers." },
            new { Title = "Grid Analysis & Interconnection", Text = "Feasibility and impact studies for interconnecting generation and industrial loads." },
            new { Title = "Transmission Planning & Operations", Text = "Transmission expansion planning, congestion analysis, and operational studies." },
            new { Title = "Energy Storage", Text = "Battery system design and control for grid stability and peak management." },
            new { Title = "Data Centres", Text = "Electrical system design and power quality management for data centers." },
            new { Title = "Distributed Generation", Text = "Integration of distributed energy resources and microgrids." },
            new { Title = "Electric Vehicle Integration", Text = "Grid impact assessments and charging infrastructure design for EVs." },
            new { Title = "Cybersecurity", Text = "Protecting power systems using advanced cybersecurity frameworks." },
            new { Title = "AI Applications for Modern Power Systems", Text = "Using AI for predictive analytics, fault detection, and system optimization." }
        })
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title fw-bold text-dark">@service.Title</h5>
                        <p class="card-text text-muted">@service.Text</p>
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        <a href="/Contact" class="text-danger text-decoration-none fw-semibold">Learn More →</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

