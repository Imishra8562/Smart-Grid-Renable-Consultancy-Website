@model Web.Areas.Admin.Model.MasterModel
@using Newtonsoft.Json;
@{
    ViewBag.Title = "EngineeringServices";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section HeadContent {
    <title>@ViewBag.Title - Smart Grid Renewable Consultancy</title>
    <meta name="description" content="Professional engineering services by Smart Grid Renewable Consultancy, specializing in smart grid systems, renewable energy engineering, technical design, testing, analysis, and project implementation." />
    <link rel="canonical" href="https://smartgridrenewable.com/EngineeringServices" />
}

<!-- ====== Page Title Section (Updated Style) ====== -->
<section class="page-title" style="position:relative; background-image:url('@Url.Content("~/Content/images/background/8.jpg")'); background-size:cover; background-position:center;">

    <div class="auto-container">
        <div class="content text-white py-5" data-aos="fade-down">
            <h1 class="display-5 fw-bold">Engineering <span class="text-warning">Services</span></h1>
            <ul class="page-breadcrumb list-inline mt-3">

                <li class="list-inline-item">
                    <a href="@Url.Action("Index","Home")" class="text-white text-decoration-none">Home</a>
                </li>
                <li class="list-inline-item text-white">Engineering Services</li>
            </ul>
        </div>
    </div>
</section>
<!-- End Page Title -->

<div class="container my-5">
    <div class="text-center mb-5">
        @*<h1 class="fw-bold text-danger">Engineering Services</h1>*@
        <p class="text-muted">
            SGRC offers comprehensive engineering solutions supporting the planning, design, and operation of modern power systems.
            Our expertise spans power system studies, renewable integration, data centers, cybersecurity, and AI-driven applications for the energy transition.
        </p>
    </div>

    <!-- Overview -->
    <div class="mb-5">
        <h3 class="fw-semibold text-dark border-bottom border-danger pb-2">Overview</h3>
        <p class="text-muted">
            SGRC’s Engineering Services team provides end-to-end solutions to utilities, industries, and infrastructure developers worldwide.
            Our professionals leverage deep technical knowledge and advanced analytical tools to ensure safe, reliable, and efficient power system operations.
        </p>
    </div>

    <!-- Services Cards -->
    <section class="portal-types py-5" style="background-color: #f2f2f2;">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="fw-bold text-dark display-6">Engineering Services We Serve</h2>
                <p class="text-muted mt-3 mx-auto lead" style="max-width: 720px;">
                    We deliver tailored engineering solutions across multiple industries, enhancing system performance, efficiency, reliability, and data-driven decision-making.
                </p>
            </div>


            <div class="row g-4">

                @if (Model.List_Engineering_Services_Obj != null && Model.List_Engineering_Services_Obj.Count > 0)
                {
                    foreach (var item in Model.List_Engineering_Services_Obj)
                    {
                        <div class="col-md-6 col-lg-4">
                            <div class="p-4 text-center bg-white border-0 shadow rounded-4 h-100 transition-all hover-shadow">

                                <!-- Title from DB -->
                                <h5 class="fw-bold text-dark mb-3">
                                    @item.Engineering_Services_Name
                                </h5>

                                <!-- Description from DB -->
                                <p class="text-muted small mb-0">
                                    @item.Engineering_Services_Page_Title
                                </p>

                                <!-- INDUSTRY IMAGE -->
                                @if (!string.IsNullOrEmpty(item.Engineering_Services_Image))
                                {
                                    <div class="mt-3">
                                        <img src="@Url.Content(item.Engineering_Services_Image)" class="img-fluid rounded" style="max-height:130px; object-fit:cover;" alt="@item.Engineering_Services_Image_Alt_Tag" />
                                    </div>
                                }

                                <!-- PAGE URL BUTTON -->
                                <div class="mt-3">
                                    <a href="@Url.Action("IndustriesDetail", "Home", new { url = item.Engineering_Services_Url_Link })"
                                       class="btn btn-warning btn-sm rounded-pill px-4">
                                        View More
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </section>

</div>

