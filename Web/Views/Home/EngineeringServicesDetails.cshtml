@model Web.Areas.Admin.Model.MasterModel
@using Newtonsoft.Json;

@{
    ViewBag.Title = "EngineeringServicesDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section HeadContent {

    <!-- ================= BASIC SEO ================= -->
    <title>@Model.Engineering_Services_Obj.Engineering_Services_Page_Title</title>

    <meta name="keywords" content="@Model.Engineering_Services_Obj.Engineering_Services_Meta_Keyword" />
    <meta name="description" content="@Model.Engineering_Services_Obj.Engineering_Services_Meta_Description" />
    <meta name="author" content="Smart Grid Renewable Consultancy" />
    <meta name="robots" content="index, follow" />

    <meta name="news_keywords" content="@Model.Engineering_Services_Obj.Engineering_Services_News_Keyword" />

    <!-- ================= CANONICAL ================= -->
    <link rel="canonical"
          href="https://smartgridrenewable.com/engineering-services/@Model.Engineering_Services_Obj.Engineering_Services_Url_Link" />

    <!-- ================= OPEN GRAPH ================= -->
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Smart Grid Renewable Consultancy" />

    <meta property="og:url" content="https://smartgridrenewable.com/engineering-services/@Model.Engineering_Services_Obj.Engineering_Services_Url_Link" />

    <meta property="og:title" content="@Model.Engineering_Services_Obj.Engineering_Services_Og_Title" />

    <meta property="og:description" content="@Model.Engineering_Services_Obj.Engineering_Services_Og_Description" />

    <meta property="og:image" content="https://smartgridrenewable.com@Model.Engineering_Services_Obj.Engineering_Services_Og_Image" />

    <meta property="og:image:secure_url" content="https://smartgridrenewable.com@Model.Engineering_Services_Obj.Engineering_Services_Og_Image" />

    <meta property="og:image:alt" content="@Model.Engineering_Services_Obj.Engineering_Services_Image_Alt_Tag" />

    <meta property="og:image:type" content="image/jpeg" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />

    <!-- ================= TWITTER ================= -->
    <meta name="twitter:card" content="summary_large_image" />

    <meta name="twitter:url" content="https://smartgridrenewable.com/engineering-services/@Model.Engineering_Services_Obj.Engineering_Services_Url_Link" />

    <meta name="twitter:title" content="@Model.Engineering_Services_Obj.Engineering_Services_Og_Title" />

    <meta name="twitter:description" content="@Model.Engineering_Services_Obj.Engineering_Services_Og_Description" />

    <meta name="twitter:image" content="https://smartgridrenewable.com@Model.Engineering_Services_Obj.Engineering_Services_Og_Image" />

    <!-- ================= STRUCTURED DATA (SERVICE SCHEMA) ================= -->
    <script type="application/ld+json">
    @{
        var item = Model.Engineering_Services_Obj;

        string cleanDescription = System.Text.RegularExpressions.Regex.Replace(item.Engineering_Services_Description ?? "", "<.*?>", "").Trim();

        string pageUrl = "https://smartgridrenewable.com/engineering-services/" + item.Engineering_Services_Url_Link;

        string imageUrl = Request.Url.Scheme + "://" + Request.Url.Authority + item.Engineering_Services_Image;

        var schema = new
        {
            @context = "https://schema.org",
            @type = "Service",
            name = item.Engineering_Services_Name,
            description = cleanDescription,
            url = pageUrl,
            image = imageUrl,
            serviceType = "Engineering Services",
            provider = new
            {
                @type = "Organization",
                name = "Smart Grid Renewable Consultancy",
                url = "https://smartgridrenewable.com"
            },
            areaServed = new
            {
                @type = "Place",
                name = "Global"
            }
        };

        @Html.Raw(JsonConvert.SerializeObject(schema, Formatting.Indented))
    }
    </script>
    <!-- ===== JSON-LD : BREADCRUMB ===== -->
    <script type="application/ld+json">
    {
      "@@context": "https://schema.org",
      "@@type": "BreadcrumbList",
      "itemListElement": [
        {
          "@@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": "@(Request.Url.Scheme + "://" + Request.Url.Authority)"
        },
        {
          "@@type": "ListItem",
          "position": 2,
          "name": "Industries",
          "item": "@(Request.Url.Scheme + "://" + Request.Url.Authority + "/engineering-services")"
        },
        {
          "@@type": "ListItem",
          "position": 3,
          "name": "@Model.Engineering_Services_Obj.Engineering_Services_Name",
          "item": "@(Request.Url.Scheme + "://" + Request.Url.Authority + "/engineering-services/" + Model.Engineering_Services_Obj.Engineering_Services_Url_Link)"
        }
      ]
    }
    </script>
}

<style>
    .app-card {
        transition: all 0.3s ease;
    }

        .app-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 1rem 2rem rgba(0, 0, 0, 0.15);
        }
</style>

<!-- ====== Page Title Section (Updated Style) ====== -->
<section class="page-title" style="position:relative; background-image:url('@Url.Content("~/Content/images/background/8.jpg")'); background-size:cover; background-position:center;">

    <div class="auto-container">
        <div class="content text-white py-5" data-aos="fade-down">
            <h1 class="display-5 fw-bold">
                @Model.Engineering_Services_Obj.Engineering_Services_Name
            </h1>
            <ul class="page-breadcrumb list-inline mt-3">

                <li class="list-inline-item">
                    <a href="@Url.Action("Index","Home")" class="text-white text-decoration-none">Home</a>
                </li>
                <li class="list-inline-item text-white">Engineering Services</li>
            </ul>
        </div>
    </div>
</section>
<!-- ================= CONTENT ================= -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row g-4">

            <!-- ===== LEFT SIDEBAR : KNOWLEDGE LIST ===== -->
            <div class="col-lg-3">


                <div class="card border-0 shadow-sm">
                    <div class="card-body p-3">

                        <h6 class="fw-bold mb-3 text-uppercase">
                            Engineering Services
                        </h6>

                        <div class="list-group list-group-flush small">

                            @if (Model.List_Engineering_Services_Obj != null && Model.List_Engineering_Services_Obj.Any())
                            {
                                foreach (var item in Model.List_Engineering_Services_Obj)
                                {
                                    bool isActive = Model.Engineering_Services_Obj.Engineering_Services_Id == item.Engineering_Services_Id;

                                    <a href="@Url.Action("EngineeringServicesDetails", "Home",new { url = item.Engineering_Services_Url_Link })" class="list-group-item list-group-item-action @(isActive ? "active bg-warning text-dark fw-semibold border-0" : "")">
                                        @item.Engineering_Services_Name
                                    </a>
                                }
                            }
                        </div>

                    </div>
                </div>

            </div>

            <!-- ===== CENTER CONTENT ===== -->
            <div class="col-lg-6">

                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4">

                        <span class="badge bg-warning text-dark mb-3">
                            Expert Insight
                        </span>

                        <h2 class="fw-bold mb-4">
                            @Model.Engineering_Services_Obj.Engineering_Services_Page_Title
                        </h2>

                        <div class="text-muted lh-lg">
                            @Html.Raw(Model.Engineering_Services_Obj.Engineering_Services_Description)
                        </div>

                    </div>
                </div>

            </div>
            <!-- ===== RIGHT IMAGE  other page Link ===== -->
            <div class="col-lg-3">

                <div class="sticky-top" style="top:100px;">

                    <!-- Image -->
                    <img src="@Url.Content(Model.Engineering_Services_Obj.Engineering_Services_Image)" class="img-fluid rounded mb-4" alt="@Model.Engineering_Services_Obj.Engineering_Services_Image_Alt_Tag" />

                    <!-- knowledge-base : battery & charger -->
                    <a href="@Url.Action("KnowledgeBaseDetails", "Home", new { url = "battery-and-charger" })"
                       class="d-flex align-items-start gap-3 py-3 border-top text-decoration-none text-dark">

                        <div class="icon-circle">
                            <i class="fas fa-book-open"></i>
                        </div>

                        <div>
                            <h6 class="mb-1 fw-semibold text-uppercase">Knowledge Base</h6>
                            <p class="mb-0 small text-muted">
                                Explore technical articles, engineering insights, documentation, and best practices
                                to support informed decisions and project success.
                            </p>
                        </div>

                    </a>


                    <!--Industries-->
                    <a href="@Url.Action("IndustriesDetail", "Home", new { industries = "Commercial-Industrial" })"
                       class="d-flex align-items-start gap-3 py-3 border-top text-decoration-none text-dark">

                        <div class="icon-circle">
                            <i class="fas fa-industry"></i>
                        </div>

                        <div>
                            <h6 class="mb-1 fw-semibold text-uppercase">Industries</h6>
                            <p class="mb-0 small text-muted">
                                Solutions tailored for commercial, industrial, utility, and infrastructure sectors.
                            </p>
                        </div>
                    </a>
                    <!-- Training -->
                    <a href="@Url.Action("Training", "Home")"
                       class="d-flex align-items-start gap-3 py-3 border-top text-decoration-none text-dark">

                        <div class="icon-circle">
                            <i class="fas fa-user-graduate"></i>
                        </div>

                        <div>
                            <h6 class="mb-1 fw-semibold text-uppercase">Training</h6>
                            <p class="mb-0 small text-muted">
                                Professional training programs to enhance skills and technical expertise.
                            </p>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

